@model SciSubmit.Controllers.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <!-- Logo & Title -->
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="fas fa-key fa-3x text-primary"></i>
                            </div>
                            <h2 class="fw-bold text-gradient mb-2">Forgot Password</h2>
                            <p class="text-muted">Enter your email to receive a password reset link</p>
                        </div>

                        <!-- Success/Error Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Forgot Password Form -->
                        <form asp-action="ForgotPassword" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Email Input -->
                            <div class="mb-4">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control form-control-lg" 
                                       type="email" placeholder="Enter your email address" autofocus />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="fas fa-paper-plane me-2"></i>Send Reset Link
                            </button>
                        </form>

                        <!-- Back to Login -->
                        <div class="text-center mt-4">
                            <a asp-action="Login" class="text-primary text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
