@model SciSubmit.Controllers.LoginViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Đăng nhập";
    var googleClientId = Configuration["Authentication:Google:ClientId"];
    var googleClientSecret = Configuration["Authentication:Google:ClientSecret"];
    var isGoogleOAuthConfigured = !string.IsNullOrEmpty(googleClientId) && !string.IsNullOrEmpty(googleClientSecret);
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-md-5 col-lg-4">
                <div class="card shadow-lg border-0">
                    <div class="card-body p-5">
                        <!-- Logo & Title -->
                        <div class="text-center mb-4">
                            <div class="mb-3">
                                <i class="fas fa-graduation-cap fa-3x text-primary"></i>
                            </div>
                            <h2 class="fw-bold text-gradient mb-2">Đăng nhập</h2>
                            <p class="text-muted">Chào mừng trở lại!</p>
                        </div>

                        <!-- Success/Error Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Login Form -->
                        <form asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Email/Phone Input -->
                            <div class="mb-3">
                                <label asp-for="EmailOrPhone" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email hoặc Số điện thoại
                                </label>
                                <input asp-for="EmailOrPhone" class="form-control form-control-lg" 
                                       placeholder="Nhập email hoặc số điện thoại" autofocus />
                                <span asp-validation-for="EmailOrPhone" class="text-danger small"></span>
                            </div>

                            <!-- Password Input -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="fas fa-lock me-2 text-primary"></i>Mật khẩu
                                </label>
                                <div class="input-group">
                                    <input asp-for="Password" class="form-control form-control-lg" 
                                           placeholder="Nhập mật khẩu" id="passwordInput" />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Remember Me & Forgot Password -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                    <label asp-for="RememberMe" class="form-check-label">
                                        Ghi nhớ đăng nhập
                                    </label>
                                </div>
                                <a asp-action="ForgotPassword" class="text-primary text-decoration-none small">
                                    Quên mật khẩu?
                                </a>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                            </button>

                            <!-- Google OAuth Button -->
                            @if (isGoogleOAuthConfigured)
                            {
                                <a asp-action="GoogleLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" 
                                   class="btn btn-outline-danger btn-lg w-100 mb-3 text-decoration-none">
                                    <i class="fab fa-google me-2"></i>Đăng nhập với Google
                                </a>
                            }
                            else
                            {
                                <button type="button" class="btn btn-outline-danger btn-lg w-100 mb-3" disabled>
                                    <i class="fab fa-google me-2"></i>Đăng nhập với Google
                                    <small class="d-block text-muted mt-1" style="font-size: 0.75rem;">(Sắp có)</small>
                                </button>
                            }
                        </form>

                        <!-- Register Link -->
                        <div class="text-center mt-4">
                            <p class="text-muted mb-0">
                                Chưa có tài khoản?
                                <a asp-action="Register" class="text-primary fw-semibold text-decoration-none">
                                    Đăng ký ngay
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility
        document.getElementById('togglePassword')?.addEventListener('click', function() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        });
    </script>
}
