@model SciSubmit.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container my-5">
    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-user-circle me-2"></i>Hồ sơ cá nhân
        </h2>
        <p class="text-muted">Quản lý thông tin tài khoản của bạn</p>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Profile Form -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Thông tin cá nhân</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Profile" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Avatar Upload -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-image me-2 text-primary"></i>Ảnh đại diện
                            </label>
                            <div class="d-flex align-items-center gap-3">
                                <div class="avatar-preview-container">
                                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                                    {
                                        <img id="avatarPreview" src="@Model.AvatarUrl" alt="Avatar" 
                                             class="rounded-circle border" 
                                             style="width: 100px; height: 100px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div id="avatarPreview" class="avatar-circle bg-primary text-white d-flex align-items-center justify-content-center rounded-circle border" 
                                             style="width: 100px; height: 100px; font-size: 2.5rem;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <input type="file" id="avatarFile" name="avatarFile" 
                                           accept="image/jpeg,image/jpg,image/png,image/gif" 
                                           class="form-control" 
                                           onchange="previewAvatar(this)" />
                                    <small class="form-text text-muted">Chọn ảnh đại diện (JPG, PNG, GIF - Tối đa 5MB)</small>
                                    <span class="text-danger small" id="avatarError"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="fas fa-user me-2 text-primary"></i>Họ và tên <span class="text-danger">*</span>
                            </label>
                            <input asp-for="FullName" class="form-control form-control-lg" 
                                   placeholder="Nhập họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="fas fa-envelope me-2 text-primary"></i>Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg" 
                                   type="email" placeholder="example@email.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                <i class="fas fa-phone me-2 text-primary"></i>Số điện thoại
                            </label>
                            <input asp-for="PhoneNumber" class="form-control form-control-lg" 
                                   type="tel" placeholder="0123456789" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            <small class="form-text text-muted">Dùng để xác minh nhanh tại quầy check-in</small>
                        </div>

                        <!-- Affiliation -->
                        <div class="mb-3">
                            <label asp-for="Affiliation" class="form-label fw-semibold">
                                <i class="fas fa-building me-2 text-primary"></i>Đơn vị công tác
                            </label>
                            <input asp-for="Affiliation" class="form-control form-control-lg" 
                                   placeholder="Tên đơn vị, trường đại học..." />
                            <span asp-validation-for="Affiliation" class="text-danger small"></span>
                        </div>

                        <!-- Keywords (for Reviewer) -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-tags me-2 text-primary"></i>Từ khóa chuyên môn
                            </label>
                            <div id="keywordsContainer" class="mb-2">
                                @if (Model.Keywords != null && Model.Keywords.Any())
                                {
                                    @foreach (var keyword in Model.Keywords)
                                    {
                                        <span class="badge bg-primary me-2 mb-2" style="font-size: 0.875rem; padding: 0.5rem 0.75rem;">
                                            @keyword
                                            <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.6rem;" onclick="removeKeyword(this)"></button>
                                        </span>
                                    }
                                }
                            </div>
                            <div class="input-group">
                                <input type="text" id="keywordInput" class="form-control" 
                                       placeholder="Nhập từ khóa và nhấn Enter" />
                                <button type="button" class="btn btn-outline-primary" onclick="addKeyword()">
                                    <i class="fas fa-plus"></i> Thêm
                                </button>
                            </div>
                            <small class="form-text text-muted">Chọn từ danh sách chuẩn do Admin ban hành</small>
                            <div id="keywordsHiddenInputs">
                                @if (Model.Keywords != null && Model.Keywords.Any())
                                {
                                    @foreach (var keyword in Model.Keywords)
                                    {
                                        <input type="hidden" name="Keywords" value="@keyword" />
                                    }
                                }
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Cập nhật hồ sơ
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar Info -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body text-center">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img src="@Model.AvatarUrl" alt="Avatar" 
                                 class="rounded-circle border mx-auto d-block" 
                                 style="width: 100px; height: 100px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="avatar-circle bg-primary text-white mx-auto d-flex align-items-center justify-content-center rounded-circle border" 
                                 style="width: 100px; height: 100px; font-size: 2.5rem;">
                            <i class="fas fa-user"></i>
                        </div>
                        }
                    </div>
                    <h5 class="mb-1">@Model.FullName</h5>
                    <p class="text-muted mb-0">@Model.Email</p>
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin</h6>
                </div>
                <div class="card-body">
                    <p class="small text-muted mb-0">
                        <i class="fas fa-lightbulb me-2 text-warning"></i>
                        Cập nhật từ khóa chuyên môn giúp hệ thống gợi ý bài báo phù hợp cho bạn (nếu bạn là Reviewer).
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let keywords = @Html.Raw(Json.Serialize(Model.Keywords ?? new List<string>()));

        function addKeyword() {
            const input = document.getElementById('keywordInput');
            const keyword = input.value.trim();
            
            if (keyword && !keywords.includes(keyword)) {
                keywords.push(keyword);
                updateKeywordsDisplay();
                input.value = '';
            }
        }

        function removeKeyword(button) {
            const badge = button.closest('.badge');
            const keyword = badge.textContent.trim().replace('×', '').trim();
            keywords = keywords.filter(k => k !== keyword);
            updateKeywordsDisplay();
        }

        function updateKeywordsDisplay() {
            const container = document.getElementById('keywordsContainer');
            const hiddenContainer = document.getElementById('keywordsHiddenInputs');
            
            container.innerHTML = keywords.map(keyword => `
                <span class="badge bg-primary me-2 mb-2" style="font-size: 0.875rem; padding: 0.5rem 0.75rem;">
                    ${keyword}
                    <button type="button" class="btn-close btn-close-white ms-2" style="font-size: 0.6rem;" onclick="removeKeyword(this)"></button>
                </span>
            `).join('');
            
            // Update hidden inputs
            hiddenContainer.innerHTML = keywords.map(keyword => 
                `<input type="hidden" name="Keywords" value="${keyword.replace(/"/g, '&quot;')}" />`
            ).join('');
        }

        // Add keyword on Enter key
        document.getElementById('keywordInput')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                addKeyword();
            }
        });

        // Avatar preview function
        function previewAvatar(input) {
            const errorElement = document.getElementById('avatarError');
            errorElement.textContent = '';
            
            if (input.files && input.files[0]) {
                const file = input.files[0];
                const maxSize = 5 * 1024 * 1024; // 5MB
                
                // Validate file size
                if (file.size > maxSize) {
                    errorElement.textContent = 'Kích thước file không được vượt quá 5MB';
                    input.value = '';
                    return;
                }
                
                // Validate file type
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    errorElement.textContent = 'Chỉ chấp nhận file ảnh (JPG, JPEG, PNG, GIF)';
                    input.value = '';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('avatarPreview');
                    if (preview.tagName === 'IMG') {
                        preview.src = e.target.result;
                    } else {
                        // Replace div with img
                        const img = document.createElement('img');
                        img.id = 'avatarPreview';
                        img.src = e.target.result;
                        img.alt = 'Avatar';
                        img.className = 'rounded-circle border';
                        img.style.width = '100px';
                        img.style.height = '100px';
                        img.style.objectFit = 'cover';
                        preview.parentNode.replaceChild(img, preview);
                    }
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}
