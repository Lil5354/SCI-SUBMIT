@model SciSubmit.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth-pages.css" asp-append-version="true" />
}

<div class="auth-hero-section">
    <!-- Background Images - Using all 3 provided images -->
    <div class="auth-background-image register-bg-1 active"></div>
    <div class="auth-background-image login-bg-1"></div>
    <div class="auth-background-image bg-3"></div>
    
    <!-- Animated Background Layers -->
    <div class="auth-dark-overlay"></div>
    <div class="auth-mesh-gradient"></div>
    <div class="auth-gradient-overlay"></div>
    <div class="auth-grid-overlay"></div>
    
    <!-- Light Streaks -->
    <div class="auth-light-streaks">
        <div class="auth-light-streak auth-light-left"></div>
        <div class="auth-light-streak auth-light-right"></div>
    </div>
    
    <!-- Particle Effects -->
    <div class="auth-particles">
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
        <div class="auth-particle"></div>
    </div>
    
    <div class="container">
        <div class="row justify-content-center align-items-center" style="min-height: 100vh; padding: 0.5rem 0;">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="auth-card-container">
                    <div class="auth-card">
                        <div class="auth-card-body">
                        <!-- Logo & Title -->
                            <div class="auth-header">
                                <div class="auth-logo-icon">
                                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <circle cx="8.5" cy="7" r="4" stroke="currentColor" stroke-width="2" fill="none"/>
                                        <path d="M20 8v6M23 11h-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                            </div>
                                <h1 class="auth-title">Create Account</h1>
                                <p class="auth-subtitle">Join us to start submitting your research papers</p>
                        </div>

                        <!-- Success/Error Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                                <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-radius: 12px; border: none;">
                                    <svg style="width: 20px; height: 20px; margin-right: 0.5rem;" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/>
                                        <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Register Form -->
                            <form asp-action="Register" method="post" novalidate>
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>

                            <!-- Email Input -->
                                <div class="auth-form-group">
                                    <label asp-for="Email" class="auth-form-label">
                                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <path d="M22 6l-10 7L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                        Email <span class="text-danger">*</span>
                                </label>
                                    <input asp-for="Email" class="auth-form-control" 
                                       type="email" placeholder="example@email.com" autofocus />
                                    <span asp-validation-for="Email" class="text-danger small d-block mt-1" style="min-height: 1.25rem;"></span>
                                    <small class="form-text text-muted d-block" style="font-size: 0.6875rem; color: #64748b; margin-top: 0.1875rem; line-height: 1.25;">We will send a confirmation email to this address</small>
                            </div>

                            <!-- Phone Number Input -->
                                <div class="auth-form-group">
                                    <label asp-for="PhoneNumber" class="auth-form-label">
                                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Phone Number <span class="text-danger">*</span>
                                </label>
                                    <input asp-for="PhoneNumber" class="auth-form-control" 
                                       type="tel" placeholder="0123456789" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger small d-block mt-1" style="min-height: 1.25rem;"></span>
                                    <small class="form-text text-muted d-block" style="font-size: 0.6875rem; color: #64748b; margin-top: 0.1875rem; line-height: 1.25;">Used for quick verification at check-in</small>
                            </div>

                            <!-- Password Input -->
                                <div class="auth-form-group">
                                    <label asp-for="Password" class="auth-form-label">
                                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Password <span class="text-danger">*</span>
                                </label>
                                    <div class="auth-input-group">
                                        <input asp-for="Password" class="auth-form-control" 
                                               placeholder="Minimum 6 characters" id="passwordInput" style="padding-right: 50px;" />
                                        <button class="auth-password-toggle" type="button" id="togglePassword">
                                            <svg id="togglePasswordIcon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" stroke="currentColor" stroke-width="2" fill="none"/>
                                                <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
                                            </svg>
                                    </button>
                                </div>
                                    <span asp-validation-for="Password" class="text-danger small d-block mt-1" style="min-height: 1.25rem;"></span>
                            </div>

                            <!-- Confirm Password Input -->
                                <div class="auth-form-group">
                                    <label asp-for="ConfirmPassword" class="auth-form-label">
                                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="2" fill="none"/>
                                            <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2" fill="none"/>
                                        </svg>
                                        Confirm Password <span class="text-danger">*</span>
                                </label>
                                    <input asp-for="ConfirmPassword" class="auth-form-control" 
                                           placeholder="Re-enter password" id="confirmPasswordInput" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1" style="min-height: 1.25rem;"></span>
                            </div>

                            <!-- Terms & Conditions -->
                                <div class="auth-form-group" style="margin-bottom: 1rem;">
                                    <div class="form-check" style="padding-left: 0.9375rem; margin: 0;">
                                        <input asp-for="AgreeToTerms" class="form-check-input" type="checkbox" id="agreeToTerms" />
                                        <label asp-for="AgreeToTerms" class="form-check-label" for="agreeToTerms">
                                            I agree to the 
                                            <a href="#" class="auth-link" style="text-decoration: none;">terms and conditions</a>
                                        <span class="text-danger">*</span>
                                    </label>
                                </div>
                                    <span asp-validation-for="AgreeToTerms" class="text-danger small d-block" style="min-height: 1.25rem; margin-top: 0.375rem; margin-left: 2.4375rem; padding-left: 0;"></span>
                            </div>

                            <!-- Submit Button -->
                                <button type="submit" class="auth-btn-primary mb-3">
                                    <svg style="width: 20px; height: 20px; margin-right: 0.5rem; display: inline-block; vertical-align: middle;" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        <circle cx="8.5" cy="7" r="4" stroke="currentColor" stroke-width="2" fill="none"/>
                                        <path d="M20 8v6M23 11h-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Create Account
                            </button>

                            <!-- Google OAuth Button -->
                                <button type="button" class="auth-btn-google" disabled>
                                    <svg style="width: 20px; height: 20px;" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                                    </svg>
                                    Sign up with Google
                                    <small class="d-block text-muted mt-1" style="font-size: 0.75rem;">(Coming soon)</small>
                            </button>
                        </form>

                        <!-- Login Link -->
                            <div class="auth-footer">
                                <p class="mb-0">
                                    Already have an account?
                                    <a asp-action="Login" class="auth-link fw-semibold">
                                        Login now
                                </a>
                            </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Background image rotation for Register
        document.addEventListener('DOMContentLoaded', function() {
            const backgrounds = document.querySelectorAll('.auth-background-image');
            let currentIndex = 0;
            
            if (backgrounds.length > 1) {
                setInterval(() => {
                    backgrounds[currentIndex].classList.remove('active');
                    currentIndex = (currentIndex + 1) % backgrounds.length;
                    backgrounds[currentIndex].classList.add('active');
                }, 8000); // Change every 8 seconds
            }
            
            // Show validation summary only if there are errors
            const validationSummary = document.querySelector('.alert-danger');
            if (validationSummary) {
                const hasErrors = validationSummary.querySelector('ul li') || validationSummary.textContent.trim();
                if (hasErrors && validationSummary.textContent.trim()) {
                    validationSummary.style.display = 'flex';
                } else {
                    validationSummary.style.display = 'none';
                }
            }
            
            // Handle form validation
            const form = document.querySelector('form[novalidate]');
            if (form) {
                form.addEventListener('submit', function(e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            }
        });
        
        // Toggle password visibility
        document.getElementById('togglePassword')?.addEventListener('click', function() {
            const passwordInput = document.getElementById('passwordInput');
            const confirmPasswordInput = document.getElementById('confirmPasswordInput');
            const toggleIcon = document.getElementById('togglePasswordIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                confirmPasswordInput.type = 'text';
                // Change to eye-slash icon
                toggleIcon.innerHTML = `
                    <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24" stroke="currentColor" stroke-width="2" fill="none"/>
                    <line x1="1" y1="1" x2="23" y2="23" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                `;
            } else {
                passwordInput.type = 'password';
                confirmPasswordInput.type = 'password';
                // Change back to eye icon
                toggleIcon.innerHTML = `
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z" stroke="currentColor" stroke-width="2" fill="none"/>
                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2" fill="none"/>
                `;
            }
        });
    </script>
}
