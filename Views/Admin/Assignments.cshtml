@{
    ViewData["Title"] = "Phân công phản biện";
}

<div class="container-fluid my-4">
    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-user-tie me-2"></i>Phân công phản biện
        </h2>
        <p class="text-muted">Gán Reviewer cho các bài báo đã nộp đầy đủ</p>
    </div>

    <!-- Assignment Form -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Phân công mới</h5>
        </div>
        <div class="card-body">
            <form id="assignmentForm" asp-action="AssignReviewer" method="post">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Chọn bài báo <span class="text-danger">*</span></label>
                        <select name="submissionId" class="form-select" required>
                            <option value="">-- Chọn bài báo --</option>
                            <option value="1">Nghiên cứu về ứng dụng AI trong quản lý tài chính</option>
                            <option value="2">Phân tích xu hướng thương mại điện tử tại Việt Nam</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Deadline phản biện <span class="text-danger">*</span></label>
                        <input type="datetime-local" name="deadline" class="form-control" required />
                    </div>
                </div>

                <div class="mt-4">
                    <label class="form-label fw-semibold">Chọn Reviewer <span class="text-danger">*</span></label>
                    <div class="alert alert-info">
                        <i class="fas fa-robot me-2"></i>
                        <strong>AI Gợi ý:</strong> Dựa trên từ khóa của bài báo, hệ thống gợi ý các Reviewer phù hợp:
                    </div>
                    <div id="aiSuggestions" class="mb-3">
                        <div class="card mb-2 border-primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">GS. Nguyễn Văn X</h6>
                                        <small class="text-muted">Keywords trùng khớp: AI (100%), Machine Learning (95%), Tài chính (90%)</small>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-primary" onclick="selectReviewer(1)">
                                        <i class="fas fa-check me-1"></i>Chọn
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">PGS. Trần Thị Y</h6>
                                        <small class="text-muted">Keywords trùng khớp: AI (85%), Tài chính (80%)</small>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-outline-primary" onclick="selectReviewer(2)">
                                        <i class="fas fa-check me-1"></i>Chọn
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm kiếm Reviewer..." id="reviewerSearch" />
                    </div>
                    <select name="reviewerId" id="reviewerSelect" class="form-select mt-2" required>
                        <option value="">-- Chọn Reviewer --</option>
                        <option value="1">GS. Nguyễn Văn X</option>
                        <option value="2">PGS. Trần Thị Y</option>
                        <option value="3">TS. Lê Văn Z</option>
                    </select>
                </div>

                <div class="mt-4 d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-paper-plane me-2"></i>Phân công phản biện
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Current Assignments -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách phân công</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="table-layout: fixed; width: 100%;">
                    <colgroup>
                        <col style="width: 30%;">
                        <col style="width: 20%;">
                        <col style="width: 15%;">
                        <col style="width: 15%;">
                        <col style="width: 20%;">
                    </colgroup>
                    <thead>
                        <tr>
                            <th style="width: 30%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Bài báo</th>
                            <th style="width: 20%; min-width: 150px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Reviewer</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Trạng thái</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Deadline</th>
                            <th style="width: 20%; min-width: 150px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="width: 30%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <strong style="word-wrap: break-word; overflow-wrap: break-word;">Nghiên cứu về ứng dụng AI...</strong>
                            </td>
                            <td style="width: 20%; min-width: 150px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">GS. Nguyễn Văn X</td>
                            <td class="text-center" style="width: 15%; min-width: 120px; padding: 12px; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-success">Đã nhận lời</span>
                            </td>
                            <td class="text-center" style="width: 15%; min-width: 120px; padding: 12px; box-sizing: border-box; overflow: hidden; white-space: nowrap;">30/01/2025</td>
                            <td class="text-center" style="width: 20%; min-width: 150px; padding: 12px; box-sizing: border-box; overflow: hidden;">
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 30%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <strong style="word-wrap: break-word; overflow-wrap: break-word;">Phân tích xu hướng thương mại...</strong>
                            </td>
                            <td style="width: 20%; min-width: 150px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">PGS. Trần Thị Y</td>
                            <td class="text-center" style="width: 15%; min-width: 120px; padding: 12px; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-warning">Chờ phản hồi</span>
                            </td>
                            <td class="text-center" style="width: 15%; min-width: 120px; padding: 12px; box-sizing: border-box; overflow: hidden; white-space: nowrap;">28/01/2025</td>
                            <td class="text-center" style="width: 20%; min-width: 150px; padding: 12px; box-sizing: border-box; overflow: hidden;">
                                <button class="btn btn-sm btn-outline-warning" onclick="sendReminder(2)">
                                    <i class="fas fa-bell"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function selectReviewer(id) {
            document.getElementById('reviewerSelect').value = id;
        }

