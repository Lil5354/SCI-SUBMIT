@model SciSubmit.Models.Admin.PagedList<SciSubmit.Models.Admin.ReviewAssignmentViewModel>
@{
    ViewData["Title"] = "Review Assignments";
    var filter = ViewBag.Filter as SciSubmit.Models.Admin.AssignmentFilterViewModel ?? new SciSubmit.Models.Admin.AssignmentFilterViewModel();
    var submissions = ViewBag.Submissions as List<dynamic> ?? new List<dynamic>();
    var statusOptions = ViewBag.StatusOptions as string[] ?? Array.Empty<string>();
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-user-tie me-2"></i>Review Assignments
                </h2>
                <p class="text-muted mb-0">Assign Reviewers to fully submitted papers</p>
            </div>
            <div>
                <a href="@Url.Action("Submissions")" class="btn btn-outline-primary">
                    <i class="fas fa-list me-2"></i>Manage Submissions
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("Assignments")">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="Status">
                            <option value="">All</option>
                            @foreach (var status in statusOptions)
                            {
                                <option value="@status" selected="@(filter.Status == status)">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Paper</label>
                        <select class="form-select" name="SubmissionId">
                            <option value="">All</option>
                            @foreach (var sub in submissions)
                            {
                                <option value="@sub.Id" selected="@(filter.SubmissionId == sub.Id)">@sub.Title</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Current Assignments -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Assignment List</h5>
                <span class="badge bg-primary">@Model.TotalCount assignments</span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" style="table-layout: fixed; width: 100%;">
                        <colgroup>
                            <col style="width: 30%;">
                            <col style="width: 20%;">
                            <col style="width: 12%;">
                            <col style="width: 12%;">
                            <col style="width: 12%;">
                            <col style="width: 14%;">
                        </colgroup>
                        <thead>
                            <tr>
                                <th style="width: 30%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Bài báo</th>
                                <th style="width: 20%; min-width: 150px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Reviewer</th>
                                <th class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Trạng thái</th>
                                <th class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Ngày mời</th>
                                <th class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Deadline</th>
                                <th class="text-center" style="width: 14%; min-width: 80px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.Items)
                            {
                                <tr>
                                    <td style="width: 30%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                        <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                            <strong style="word-wrap: break-word; overflow-wrap: break-word; display: block;">@assignment.SubmissionTitle</strong>
                                            <small class="text-muted" style="word-wrap: break-word; overflow-wrap: break-word; display: block;">ID: @assignment.SubmissionId</small>
                                        </div>
                                    </td>
                                    <td style="width: 20%; min-width: 150px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                        <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                            <strong style="word-wrap: break-word; overflow-wrap: break-word; display: block;">@assignment.ReviewerName</strong>
                                            <small class="text-muted" style="word-wrap: break-word; overflow-wrap: break-word; display: block;">@assignment.ReviewerEmail</small>
                                        </div>
                                    </td>
                                    <td class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                        @{
                                            var statusBadgeClass = assignment.Status switch
                                            {
                                                "Pending" => "bg-warning",
                                                "Accepted" => "bg-success",
                                                "Rejected" => "bg-danger",
                                                "Completed" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusBadgeClass">@assignment.Status</span>
                                    </td>
                                    <td class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">
                                        <small>@assignment.InvitedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center" style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">
                                        @{
                                            var isOverdue = assignment.Deadline < DateTime.UtcNow && assignment.Status != "Completed";
                                        }
                                        <small class="@(isOverdue ? "text-danger fw-bold" : "")">
                                            @assignment.Deadline.ToString("dd/MM/yyyy")
                                        </small>
                                    </td>
                                    <td class="text-center" style="width: 14%; min-width: 80px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                        <a href="@Url.Action("SubmissionDetails", new { id = assignment.SubmissionId })" 
                                           class="btn btn-sm btn-outline-primary" title="Xem bài báo">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Assignments", new { Page = Model.Page - 1, filter.Status, filter.SubmissionId })">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Assignments", new { Page = i, filter.Status, filter.SubmissionId })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Assignments", new { Page = Model.Page + 1, filter.Status, filter.SubmissionId })">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No assignments found</p>
                </div>
            }
        </div>
    </div>

    <!-- Quick Assign Button -->
    <div class="card shadow-sm border-0">
        <div class="card-body text-center">
            <a href="@Url.Action("Submissions")" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i>New Review Assignment
            </a>
            <p class="text-muted mt-2 mb-0">Select a paper from the submissions list to assign</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
