@model SciSubmit.Models.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Admin";
    // Force refresh - Version 2.0
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard Admin
        </h2>
        <p class="text-muted">Tổng quan hệ thống và quản lý hội thảo</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-primary text-white mx-auto mb-3">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="text-primary mb-1">@Model.Stats.TotalSubmissions</h3>
                    <p class="text-muted mb-0">Tổng số bài nộp</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-success text-white mx-auto mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="text-success mb-1">@Model.Stats.ApprovedAbstracts</h3>
                    <p class="text-muted mb-0">Đã duyệt tóm tắt</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-warning text-white mx-auto mb-3">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h3 class="text-warning mb-1">@Model.Stats.UnderReview</h3>
                    <p class="text-muted mb-0">Đang phản biện</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-info text-white mx-auto mb-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="text-info mb-1">@Model.Stats.TotalRegistrations</h3>
                    <p class="text-muted mb-0">Số lượng đăng ký</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upcoming Deadlines -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Deadline sắp tới</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (Model.Deadlines.Any())
                        {
                            @foreach (var deadline in Model.Deadlines)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@deadline.Title</h6>
                                            <small class="text-muted">@deadline.DeadlineDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <span class="badge @deadline.BadgeClass">Còn @deadline.RemainingDays ngày</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item border-0 px-0">
                                <p class="text-muted mb-0">Chưa có deadline nào được cấu hình</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Quản lý Bài nộp & Phản biện -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Quản lý Bài nộp & Phản biện</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Submissions")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-list me-2"></i>Quản lý bài nộp
                        </a>
                        <a href="@Url.Action("Assignments")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-user-tie me-2"></i>Phân công phản biện
                        </a>
                        <a href="@Url.Action("Reports")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-chart-bar me-2"></i>Báo cáo & Thống kê
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quản lý Hệ thống -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quản lý Hệ thống</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Conference")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-calendar me-2"></i>Cấu hình hội thảo
                        </a>
                        <a href="@Url.Action("Users")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-users me-2"></i>Quản lý người dùng
                        </a>
                        <a href="@Url.Action("Settings")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-cog me-2"></i>Cấu hình hệ thống
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- All Admin Functions Grid -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="mb-0"><i class="fas fa-th me-2"></i>Tất cả chức năng quản trị</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- 1. Dashboard -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Dashboard")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-tachometer-alt fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Dashboard</h6>
                                    <small class="text-muted">Thống kê tổng quan</small>
                                </div>
                            </a>
                        </div>

                        <!-- 2. Quản lý Bài nộp -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Submissions")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-list fa-2x text-success"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Quản lý Bài nộp</h6>
                                    <small class="text-muted">Danh sách, filter, pagination</small>
                                </div>
                            </a>
                        </div>

                        <!-- 3. Phân công Phản biện -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Assignments")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-user-tie fa-2x text-warning"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Phân công Phản biện</h6>
                                    <small class="text-muted">Danh sách assignments</small>
                                </div>
                            </a>
                        </div>

                        <!-- 4. Cấu hình Hội thảo -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Conference")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-calendar-alt fa-2x text-info"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Cấu hình Hội thảo</h6>
                                    <small class="text-muted">Thông tin & Timeline</small>
                                </div>
                            </a>
                        </div>

                        <!-- 5. Quản lý Người dùng -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Users")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-users fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Quản lý Người dùng</h6>
                                    <small class="text-muted">Danh sách, filter, role</small>
                                </div>
                            </a>
                        </div>

                        <!-- 6. Quản lý Lĩnh vực -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Fields")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-list fa-2x text-success"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Quản lý Lĩnh vực</h6>
                                    <small class="text-muted">CRUD Topics</small>
                                </div>
                            </a>
                        </div>

                        <!-- 7. Quản lý Từ khóa -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Keywords")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-tags fa-2x text-warning"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Quản lý Từ khóa</h6>
                                    <small class="text-muted">CRUD & Duyệt keywords</small>
                                </div>
                            </a>
                        </div>

                        <!-- 8. Báo cáo -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Reports")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-chart-bar fa-2x text-info"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Báo cáo</h6>
                                    <small class="text-muted">Thống kê & Charts</small>
                                </div>
                            </a>
                        </div>

                        <!-- 9. Cấu hình Hệ thống -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Settings")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-cog fa-2x text-secondary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Cấu hình Hệ thống</h6>
                                    <small class="text-muted">Email, System, Notifications</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow {
            transition: all 0.3s ease;
        }
        .hover-shadow:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        .stat-card-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }
        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
    </style>
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
