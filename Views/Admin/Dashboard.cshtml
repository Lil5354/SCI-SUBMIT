@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="container-fluid my-4">
    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard Admin
        </h2>
        <p class="text-muted">Tổng quan hệ thống và quản lý hội thảo</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-primary text-white mx-auto mb-3">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="text-primary mb-1">156</h3>
                    <p class="text-muted mb-0">Tổng số bài nộp</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-success text-white mx-auto mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="text-success mb-1">89</h3>
                    <p class="text-muted mb-0">Đã duyệt tóm tắt</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-warning text-white mx-auto mb-3">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h3 class="text-warning mb-1">45</h3>
                    <p class="text-muted mb-0">Đang phản biện</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-info text-white mx-auto mb-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="text-info mb-1">234</h3>
                    <p class="text-muted mb-0">Số lượng đăng ký</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upcoming Deadlines -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Deadline sắp tới</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Deadline nộp tóm tắt</h6>
                                    <small class="text-muted">30/01/2025 23:59</small>
                                </div>
                                <span class="badge bg-danger">Còn 12 ngày</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Deadline nộp Full-text</h6>
                                    <small class="text-muted">15/02/2025 23:59</small>
                                </div>
                                <span class="badge bg-warning">Còn 28 ngày</span>
                            </div>
                        </div>
                        <div class="list-group-item border-0 px-0">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Ngày công bố kết quả</h6>
                                    <small class="text-muted">01/03/2025</small>
                                </div>
                                <span class="badge bg-info">Còn 42 ngày</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Thao tác nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Admin/Submissions" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>Quản lý bài nộp
                        </a>
                        <a href="/Admin/Assignments" class="btn btn-outline-primary">
                            <i class="fas fa-user-tie me-2"></i>Phân công phản biện
                        </a>
                        <a href="/Admin/Conference" class="btn btn-outline-primary">
                            <i class="fas fa-cog me-2"></i>Cấu hình hội thảo
                        </a>
                        <a href="/Admin/Reports" class="btn btn-outline-primary">
                            <i class="fas fa-chart-bar me-2"></i>Báo cáo & Thống kê
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
