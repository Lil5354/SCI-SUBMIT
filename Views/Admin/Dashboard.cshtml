@model SciSubmit.Models.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard Admin";
    // Force refresh - Version 2.0
}

<link rel="stylesheet" href="~/css/dashboard-defi.css" asp-append-version="true" />

<!-- DEFI Background Layers -->
<div class="dashboard-defi-background"></div>
<div class="dashboard-particles">
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
    <div class="dashboard-particle"></div>
</div>
<div class="dashboard-light-streaks">
    <div class="dashboard-light-streak dashboard-light-left"></div>
    <div class="dashboard-light-streak dashboard-light-right"></div>
</div>

<div class="dashboard-defi-wrapper">
<div class="container-fluid">
<div class="dashboard-defi-content">
<div class="container-fluid my-4 px-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Header -->
    <div class="dashboard-defi-header mb-4">
        <h2>
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard Admin
        </h2>
        <p>System overview and conference management</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon text-white mx-auto mb-3">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="mb-1">@Model.Stats.TotalSubmissions</h3>
                    <p class="text-muted mb-0">Total Submissions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon text-white mx-auto mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="mb-1">@Model.Stats.ApprovedAbstracts</h3>
                    <p class="text-muted mb-0">Approved Abstracts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon text-white mx-auto mb-3">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h3 class="mb-1">@Model.Stats.UnderReview</h3>
                    <p class="text-muted mb-0">Under Review</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon text-white mx-auto mb-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="mb-1">@Model.Stats.TotalRegistrations</h3>
                    <p class="text-muted mb-0">Total Registrations</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upcoming Deadlines -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Upcoming Deadlines</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        @if (Model.Deadlines.Any())
                        {
                            @foreach (var deadline in Model.Deadlines)
                            {
                                <div class="list-group-item border-0 px-0">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@deadline.Title</h6>
                                            <small class="text-muted">@deadline.DeadlineDate.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <span class="badge @deadline.BadgeClass">@deadline.RemainingDays days remaining</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item border-0 px-0">
                                <p class="text-muted mb-0">No deadlines configured</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Quản lý Bài nộp & Phản biện -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Submissions & Reviews Management</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("AbstractSubmissions")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-file-alt me-2"></i>Duyệt Tóm Tắt (Abstract Review)
                        </a>
                        <a href="@Url.Action("FullPaperSubmissions")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-file-pdf me-2"></i>Duyệt Bài Đầy Đủ (Full Paper Review)
                        </a>
                        <a href="@Url.Action("Submissions")" class="btn btn-outline-secondary w-100 text-start">
                            <i class="fas fa-list me-2"></i>Tất cả Submissions
                        </a>
                        <a href="@Url.Action("Assignments")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-user-tie me-2"></i>Assign Reviewers
                        </a>
                        <a href="@Url.Action("Reports")" class="btn btn-outline-success w-100 text-start">
                            <i class="fas fa-chart-bar me-2"></i>Reports & Statistics
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quản lý Hệ thống -->
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>System Management</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Conference")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-calendar me-2"></i>Conference Settings
                        </a>
                        <a href="@Url.Action("Users")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-users me-2"></i>Manage Users
                        </a>
                        <a href="@Url.Action("Settings")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-cog me-2"></i>System Settings
                        </a>
                        <a href="@Url.Action("KeynoteSpeakers")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-microphone me-2"></i>Manage Keynote Speakers
                        </a>
                        <a href="@Url.Action("Committee")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-users-cog me-2"></i>Manage Committee
                        </a>
                        <a href="@Url.Action("Program")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-calendar-check me-2"></i>Manage Program
                        </a>
                        <a href="@Url.Action("ConferenceLocation")" class="btn btn-outline-info w-100 text-start">
                            <i class="fas fa-map-marker-alt me-2"></i>Manage Locations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- All Admin Functions Grid -->
    <div class="row g-4 mt-2">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.8) 0%, rgba(118, 75, 162, 0.8) 100%) !important;">
                    <h5 class="mb-0"><i class="fas fa-th me-2"></i>All Admin Functions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <!-- 1. Duyệt Tóm Tắt -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("AbstractSubmissions")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-file-alt fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Duyệt Tóm Tắt</h6>
                                    <small class="text-muted">Abstract Review</small>
                                </div>
                            </a>
                        </div>
                        <!-- 2. Duyệt Bài Đầy Đủ -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("FullPaperSubmissions")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Duyệt Bài Đầy Đủ</h6>
                                    <small class="text-muted">Full Paper Review</small>
                                </div>
                            </a>
                        </div>
                        <!-- 3. Tất cả Submissions -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Submissions")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-list fa-2x text-success"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Tất cả Submissions</h6>
                                    <small class="text-muted">All submissions</small>
                                </div>
                            </a>
                        </div>

                        <!-- 2. Assign Reviewers -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Assignments")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-user-tie fa-2x text-warning"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Assign Reviewers</h6>
                                    <small class="text-muted">Assignment list</small>
                                </div>
                            </a>
                        </div>

                        <!-- 3. Conference Settings -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Conference")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-calendar-alt fa-2x text-info"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Conference Settings</h6>
                                    <small class="text-muted">Info & Timeline</small>
                                </div>
                            </a>
                        </div>

                        <!-- 4. Manage Users -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Users")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-users fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Manage Users</h6>
                                    <small class="text-muted">List, filter, role</small>
                                </div>
                            </a>
                        </div>

                        <!-- 5. Manage Fields -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Fields")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-list fa-2x text-success"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Manage Fields</h6>
                                    <small class="text-muted">CRUD Topics</small>
                                </div>
                            </a>
                        </div>

                        <!-- 6. Manage Keywords -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Keywords")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-tags fa-2x text-warning"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Manage Keywords</h6>
                                    <small class="text-muted">CRUD & Approve keywords</small>
                                </div>
                            </a>
                        </div>

                        <!-- 7. Reports -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Reports")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-chart-bar fa-2x text-info"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Reports</h6>
                                    <small class="text-muted">Statistics & Charts</small>
                                </div>
                            </a>
                        </div>

                        <!-- 8. System Settings -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Settings")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-cog fa-2x text-secondary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">System Settings</h6>
                                    <small class="text-muted">Email, System, Notifications</small>
                                </div>
                            </a>
                        </div>

                        <!-- 10. Interface Settings -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("InterfaceSettings")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-palette fa-2x text-info"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Interface Settings</h6>
                                    <small class="text-muted">Customize home page appearance</small>
                                </div>
                            </a>
                        </div>

                        <!-- 12. Timeline Management -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Timeline")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-stream fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Timeline Management</h6>
                                    <small class="text-muted">Manage conference timeline</small>
                                </div>
                            </a>
                        </div>

                        <!-- 11. Full Papers Management -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("FullPapers")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-file-pdf fa-2x text-danger"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Full Papers</h6>
                                    <small class="text-muted">Manage full papers & assign reviewers</small>
                                </div>
                            </a>
                        </div>

                        <!-- 13. Manage Committee -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Committee")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-users-cog fa-2x text-primary"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Manage Committee</h6>
                                    <small class="text-muted">Organizing committee members</small>
                                </div>
                            </a>
                        </div>

                        <!-- 14. Manage Program -->
                        <div class="col-md-3 col-sm-6">
                            <a href="@Url.Action("Program")" class="card text-decoration-none border h-100 hover-shadow">
                                <div class="card-body text-center">
                                    <div class="mb-3">
                                        <i class="fas fa-calendar-check fa-2x text-success"></i>
                                    </div>
                                    <h6 class="card-title mb-0">Manage Program</h6>
                                    <small class="text-muted">Conference schedule & agenda</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
