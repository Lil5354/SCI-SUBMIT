@model List<SciSubmit.Models.Admin.TopicViewModel>
@{
    ViewData["Title"] = "Quản lý lĩnh vực";
}

<link rel="stylesheet" href="~/css/fields-fix.css" asp-append-version="true" />

@Html.AntiForgeryToken()

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-list me-2"></i>Quản lý lĩnh vực
                </h2>
                <p class="text-muted mb-0">Quản lý các lĩnh vực nghiên cứu (Topics) cho bài nộp</p>
            </div>
            <div>
                <button type="button" 
                        class="btn btn-primary" 
                        id="addFieldBtn"
                        style="pointer-events: auto !important; cursor: pointer !important; z-index: 10000 !important; position: relative !important;">
                    <i class="fas fa-plus me-2"></i>Thêm lĩnh vực
                </button>
            </div>
        </div>
    </div>

    <!-- Fields List -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var topic in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="mb-0">@topic.Name</h5>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-warning edit-field-btn" 
                                            data-id="@topic.Id" 
                                            data-name="@Html.Raw(Json.Serialize(topic.Name))" 
                                            data-description="@Html.Raw(Json.Serialize(topic.Description ?? ""))" 
                                            data-order-index="@topic.OrderIndex" 
                                            data-is-active="@(topic.IsActive ? "true" : "false")" 
                                            title="Chỉnh sửa"
                                            style="pointer-events: auto !important; cursor: pointer !important; z-index: 1000 !important; position: relative;">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="window.deleteField ? window.deleteField(@topic.Id) : deleteField(@topic.Id)" 
                                            title="Xóa"
                                            style="pointer-events: auto !important; cursor: pointer !important; z-index: 1000 !important; position: relative;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <p class="text-muted small mb-2">Số bài nộp: <strong>@topic.SubmissionCount</strong></p>
                            @if (!string.IsNullOrEmpty(topic.Description))
                            {
                                <p class="text-muted small mb-0">Mô tả: @topic.Description</p>
                            }
                            @if (!topic.IsActive)
                            {
                                <span class="badge bg-secondary">Đã vô hiệu hóa</span>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Chưa có lĩnh vực nào. Hãy thêm lĩnh vực mới.
                </div>
            </div>
        }
    </div>
</div>

<!-- Add/Edit Field Modal -->
<div class="modal fade modal-dialog-centered" id="fieldModal" tabindex="-1" aria-labelledby="fieldModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="fieldModalTitle">Thêm lĩnh vực mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="fieldForm">
                    <input type="hidden" id="fieldId" name="Id" />
                    <div class="mb-3">
                        <label class="form-label">Tên lĩnh vực <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="fieldName" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" rows="3" id="fieldDescription" name="Description"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Thứ tự hiển thị</label>
                        <input type="number" class="form-control" id="fieldOrderIndex" name="OrderIndex" value="0" min="0" />
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="fieldIsActive" name="IsActive" checked>
                            <label class="form-check-label" for="fieldIsActive">
                                Kích hoạt
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveField()">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Ensure functions are available immediately
        console.log('Fields page script loading...');
        
        function getToken() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            return token ? token.value : '';
        }

        function showAddFieldModal() {
            console.log('showAddFieldModal called');
            try {
                document.getElementById('fieldModalTitle').textContent = 'Thêm lĩnh vực mới';
                document.getElementById('fieldForm').reset();
                document.getElementById('fieldId').value = '';
                document.getElementById('fieldIsActive').checked = true;
                const modalElement = document.getElementById('fieldModal');
                if (!modalElement) {
                    alert('Không tìm thấy modal. Vui lòng tải lại trang.');
                    return;
                }
                if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
                    const modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
                    modal.show();
                } else if (typeof $ !== 'undefined') {
                    $('#fieldModal').modal('show');
                } else {
                    // Fallback
                    modalElement.style.display = 'block';
                    modalElement.classList.add('show');
                    document.body.classList.add('modal-open');
                }
            } catch (error) {
                console.error('Error in showAddFieldModal:', error);
                alert('Lỗi: ' + error.message);
            }
        }

        function editField(id, name, description, orderIndex, isActive) {
            console.log('editField called with:', { id, name, description, orderIndex, isActive });
            try {
                const modalElement = document.getElementById('fieldModal');
                console.log('Modal element:', modalElement);
                if (!modalElement) {
                    alert('Không tìm thấy modal. Vui lòng tải lại trang.');
                    console.error('Modal element not found');
                    return;
                }

                // Set form values
                document.getElementById('fieldModalTitle').textContent = 'Chỉnh sửa lĩnh vực';
                document.getElementById('fieldId').value = id || '';
                document.getElementById('fieldName').value = name || '';
                document.getElementById('fieldDescription').value = description || '';
                document.getElementById('fieldOrderIndex').value = orderIndex || 0;
                
                // Handle boolean value - can be string "true"/"false" or boolean
                const isActiveValue = isActive === 'true' || isActive === true || isActive === 'True' || isActive === 1;
                document.getElementById('fieldIsActive').checked = isActiveValue;
                console.log('isActive value:', isActive, 'converted to:', isActiveValue);
                
                // Check if Bootstrap is available
                console.log('Bootstrap available:', typeof bootstrap !== 'undefined');
                if (typeof bootstrap === 'undefined' || !bootstrap.Modal) {
                    alert('Bootstrap chưa được tải. Vui lòng tải lại trang.');
                    console.error('Bootstrap.Modal is not available');
                    // Fallback: show modal using jQuery if available, or direct style manipulation
                    if (typeof $ !== 'undefined') {
                        $('#fieldModal').modal('show');
                        return;
                    }
                    // Last resort: show modal by manipulating classes
                    modalElement.classList.remove('fade');
                    modalElement.style.display = 'block';
                    modalElement.classList.add('show');
                    document.body.classList.add('modal-open');
                    const backdrop = document.createElement('div');
                    backdrop.className = 'modal-backdrop fade show';
                    backdrop.id = 'modalBackdrop';
                    document.body.appendChild(backdrop);
                    return;
                }

                // Get existing modal instance or create new one
                let modal = bootstrap.Modal.getInstance(modalElement);
                if (!modal) {
                    console.log('Creating new Bootstrap modal instance');
                    modal = new bootstrap.Modal(modalElement, {
                        backdrop: true,
                        keyboard: true,
                        focus: true
                    });
                }
                console.log('Showing modal');
                modal.show();
                
                // Ensure modal is visible
                setTimeout(() => {
                    if (!modalElement.classList.contains('show')) {
                        console.warn('Modal not showing, forcing display');
                        modalElement.classList.add('show');
                        modalElement.style.display = 'block';
                    }
                }, 100);
            } catch (error) {
                console.error('Error showing edit modal:', error);
                alert('Có lỗi xảy ra khi mở form chỉnh sửa: ' + error.message);
            }
        }

        function deleteField(id) {
            if (confirm('Bạn có chắc chắn muốn xóa lĩnh vực này không?')) {
                const token = getToken();
                if (!token) {
                    alert('Không tìm thấy token xác thực. Vui lòng tải lại trang.');
                    return;
                }

                fetch('@Url.Action("DeleteTopic", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({ Id: id, __RequestVerificationToken: token })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa lĩnh vực.');
                });
            }
        }

        function saveField() {
            const form = document.getElementById('fieldForm');
            const formData = new FormData(form);
            const data = {
                Id: parseInt(document.getElementById('fieldId').value) || 0,
                Name: document.getElementById('fieldName').value,
                Description: document.getElementById('fieldDescription').value,
                OrderIndex: parseInt(document.getElementById('fieldOrderIndex').value) || 0,
                IsActive: document.getElementById('fieldIsActive').checked
            };

            if (!data.Name) {
                alert('Vui lòng nhập tên lĩnh vực.');
                return;
            }

            const url = data.Id > 0 
                ? '@Url.Action("UpdateTopic", "Admin")?id=' + data.Id
                : '@Url.Action("CreateTopic", "Admin")';

            const token = getToken();
            if (!token) {
                alert('Không tìm thấy token xác thực. Vui lòng tải lại trang.');
                return;
            }

            // Include token in body for JSON requests
            data.__RequestVerificationToken = token;
            
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify(data)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                return response.json();
            })
            .then(result => {
                if (result.success) {
                    alert(result.message);
                    const modal = bootstrap.Modal.getInstance(document.getElementById('fieldModal'));
                    if (modal) {
                        modal.hide();
                    }
                    location.reload();
                } else {
                    alert(result.message || 'Có lỗi xảy ra khi lưu lĩnh vực.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi lưu lĩnh vực: ' + error.message);
            });
        }

        // Make functions globally available IMMEDIATELY
        // This ensures they're available even if event listeners fail
        if (typeof window !== 'undefined') {
            window.getToken = getToken;
            window.showAddFieldModal = showAddFieldModal;
            window.editField = editField;
            window.deleteField = deleteField;
            window.saveField = saveField;
            console.log('Functions attached to window:', {
                getToken: typeof window.getToken,
                showAddFieldModal: typeof window.showAddFieldModal,
                editField: typeof window.editField,
                deleteField: typeof window.deleteField,
                saveField: typeof window.saveField
            });
        }

        // Attach event listeners to edit buttons using data attributes
        // Use both DOMContentLoaded and immediate execution to ensure it works
        function attachEventListeners() {
            console.log('Attaching event listeners...');
            
            // Check if Bootstrap is available
            if (typeof bootstrap === 'undefined') {
                console.warn('Bootstrap is not loaded. Some features may not work correctly.');
            }

            // Attach event listeners to edit buttons using data attributes
            const editButtons = document.querySelectorAll('.edit-field-btn');
            console.log('Found edit buttons:', editButtons.length);
            
            editButtons.forEach(function(btn, index) {
                // Remove any existing event listeners by cloning
                const newBtn = btn.cloneNode(true);
                if (btn.parentNode) {
                    btn.parentNode.replaceChild(newBtn, btn);
                }
                
                // Add click event listener
                newBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    e.stopImmediatePropagation();
                    
                    console.log('Edit button clicked, index:', index);
                    
                    const id = parseInt(this.getAttribute('data-id')) || 0;
                    // Parse JSON values to handle Unicode characters correctly
                    let name = '';
                    let description = '';
                    try {
                        const nameAttr = this.getAttribute('data-name') || '';
                        name = nameAttr.startsWith('"') ? JSON.parse(nameAttr) : nameAttr;
                    } catch (err) {
                        name = this.getAttribute('data-name') || '';
                    }
                    try {
                        const descAttr = this.getAttribute('data-description') || '';
                        description = descAttr.startsWith('"') ? JSON.parse(descAttr) : descAttr;
                    } catch (err) {
                        description = this.getAttribute('data-description') || '';
                    }
                    const orderIndex = parseInt(this.getAttribute('data-order-index')) || 0;
                    const isActive = this.getAttribute('data-is-active') === 'true';
                    
                    console.log('Edit button data:', { id, name, description, orderIndex, isActive });
                    
                    if (typeof window.editField === 'function') {
                        window.editField(id, name, description, orderIndex, isActive);
                    } else {
                        console.error('editField function not found on window');
                        alert('Lỗi: Không tìm thấy hàm editField. Vui lòng tải lại trang.');
                    }
                }, true); // Use capture phase to ensure it fires
            });
            
            // Also ensure onclick handlers work
            const addButton = document.getElementById('addFieldBtn');
            if (addButton) {
                console.log('Add button found, attaching listener');
                addButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Add button clicked');
                    if (typeof window.showAddFieldModal === 'function') {
                        window.showAddFieldModal();
                    } else if (typeof showAddFieldModal === 'function') {
                        showAddFieldModal();
                    } else {
                        alert('Lỗi: Không tìm thấy hàm showAddFieldModal');
                    }
                }, true);
                addButton.style.pointerEvents = 'auto';
                addButton.style.cursor = 'pointer';
                addButton.style.zIndex = '10000';
                addButton.style.position = 'relative';
            } else {
                console.warn('Add button not found!');
            }
            
            const deleteButtons = document.querySelectorAll('button[onclick*="deleteField"]');
            console.log('Delete buttons found:', deleteButtons.length);
            deleteButtons.forEach(function(btn, index) {
                console.log('Setting up delete button', index);
                btn.style.pointerEvents = 'auto';
                btn.style.cursor = 'pointer';
                btn.style.zIndex = '10000';
                btn.style.position = 'relative';
                // Also add event listener as backup
                const onclickAttr = btn.getAttribute('onclick');
                if (onclickAttr) {
                    const match = onclickAttr.match(/deleteField\((\d+)\)/);
                    if (match) {
                        const topicId = parseInt(match[1]);
                        btn.addEventListener('click', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            if (typeof window.deleteField === 'function') {
                                window.deleteField(topicId);
                            } else if (typeof deleteField === 'function') {
                                deleteField(topicId);
                            }
                        }, true);
                    }
                }
            });
        }

        // Attach listeners when DOM is ready - multiple strategies
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', function() {
                console.log('DOMContentLoaded fired');
                attachEventListeners();
            });
        } else {
            // DOM is already ready
            console.log('DOM already ready, attaching listeners immediately');
            attachEventListeners();
        }
        
        // Also try after a short delay to ensure everything is loaded
        setTimeout(function() {
            console.log('Delayed attachment of event listeners');
            attachEventListeners();
        }, 500);
    </script>
}
