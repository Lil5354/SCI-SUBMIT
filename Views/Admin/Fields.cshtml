    </div>
</div>

<!-- Add/Edit Field Modal -->
<div class="modal fade" id="fieldModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="fieldModalTitle">Thêm lĩnh vực mới</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="fieldForm">
                    <div class="mb-3">
                        <label class="form-label">Tên lĩnh vực <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="Name" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        <textarea class="form-control" rows="3" name="Description"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" onclick="saveField()">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddFieldModal() {
            document.getElementById('fieldModalTitle').textContent = 'Thêm lĩnh vực mới';
            document.getElementById('fieldForm').reset();
            new bootstrap.Modal(document.getElementById('fieldModal')).show();
        }

        function editField(id) {
            document.getElementById('fieldModalTitle').textContent = 'Chỉnh sửa lĩnh vực';
            // TODO: Load field data
            new bootstrap.Modal(document.getElementById('fieldModal')).show();
        }

        function deleteField(id) {
