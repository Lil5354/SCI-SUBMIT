                alert('Đã xóa lĩnh vực thành công!');
            }
        }

        function saveField() {
            // TODO: Implement save
            alert('Đã lưu lĩnh vực thành công!');
            bootstrap.Modal.getInstance(document.getElementById('fieldModal')).hide();
        }
    </script>
}
