@model List<SciSubmit.Models.Admin.FullPaperViewModel>
@{
    ViewData["Title"] = "Full Papers Management";
    var reviewers = ViewBag.Reviewers as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>@TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-file-word me-2"></i>Full Papers Management
                </h2>
                <p class="text-muted">Manage full paper submissions and assign reviewers</p>
            </div>
            <div>
                <form asp-action="AddTestReviewers" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-user-plus me-2"></i>Add Test Reviewers
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Full Papers Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" style="table-layout: fixed; width: 100%;">
                        <colgroup>
                            <col style="width: 35%;">
                            <col style="width: 12%;">
                            <col style="width: 15%;">
                            <col style="width: 25%;">
                            <col style="width: 13%;">
                        </colgroup>
                        <thead>
                            <tr>
                                <th style="width: 35%; min-width: 250px; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">Title</th>
                                <th style="width: 12%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Author</th>
                                <th style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">File & Version</th>
                                <th style="width: 25%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">Reviewers & Actions</th>
                                <th style="width: 13%; min-width: 100px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Uploaded</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paper in Model)
                            {
                                <tr>
                                    <td style="width: 35%; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">
                                        <strong class="d-block mb-1">@paper.Title</strong>
                                        <small class="text-muted">ID: @paper.SubmissionId</small>
                                    </td>
                                    <td style="width: 12%; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">
                                        @paper.AuthorName
                                    </td>
                                    <td style="width: 15%; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">
                                        <div class="d-flex flex-column gap-1">
                                            <span class="badge bg-info">v@paper.VersionNumber</span>
                                            <a href="@paper.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-download me-1"></i>Download
                                            </a>
                                            <small class="text-muted">@(paper.FileSize / 1024) KB</small>
                                        </div>
                                    </td>
                                    <td style="width: 25%; padding: 12px; vertical-align: middle; box-sizing: border-box; word-wrap: break-word;">
                                        <div class="d-flex flex-column gap-2">
                                            @if (paper.AssignedReviewers.Any())
                                            {
                                                <div class="d-flex flex-column gap-1">
                                                    @foreach (var reviewer in paper.AssignedReviewers)
                                                    {
                                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                                            <span class="badge @(reviewer.Status == "Pending" ? "bg-warning" : reviewer.Status == "Accepted" ? "bg-success" : "bg-secondary")">
                                                                @reviewer.ReviewerName
                                                            </span>
                                                            <small class="text-muted">(@reviewer.Status)</small>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">No reviewers</span>
                                            }
                                            @if (paper.CanAssignReviewer)
                                            {
                                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assignReviewerModal_@paper.SubmissionId">
                                                    <i class="fas fa-user-plus me-1"></i>Assign
                                                </button>
                                            }
                                            else
                                            {
                                                <span class="text-muted small">Cannot assign</span>
                                            }
                                        </div>
                                    </td>
                                    <td style="width: 13%; padding: 12px; vertical-align: middle; box-sizing: border-box;">
                                        <small>@paper.UploadedAt.ToString("MM/dd/yyyy")</small>
                                        <br>
                                        <small class="text-muted">@paper.UploadedAt.ToString("HH:mm")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-word fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No full papers found</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modals for Assign Reviewers - Placed outside table to prevent flickering -->
@if (Model.Any())
{
    @foreach (var paper in Model)
    {
        <div class="modal fade" id="assignReviewerModal_@paper.SubmissionId" tabindex="-1" aria-labelledby="assignReviewerModalLabel_@paper.SubmissionId" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form asp-action="AssignReviewers" method="post" id="assignReviewersForm_@paper.SubmissionId">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="submissionId" value="@paper.SubmissionId" />
                        <div class="modal-header">
                            <h5 class="modal-title" id="assignReviewerModalLabel_@paper.SubmissionId">
                                Assign Reviewers - @paper.Title
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p class="text-muted mb-3">Select up to 3 reviewers for this paper (you can leave some fields empty):</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <!-- Reviewer 1 -->
                                    <div class="mb-3">
                                        <label for="reviewer1_@paper.SubmissionId" class="form-label fw-semibold">Reviewer 1</label>
                                        <select class="form-select reviewer-select" id="reviewer1_@paper.SubmissionId" name="reviewerIds">
                                            <option value="">-- Select Reviewer 1 (Optional) --</option>
                                            @foreach (var reviewer in reviewers)
                                            {
                                                var isSelected = paper.AssignedReviewers.Count > 0 && paper.AssignedReviewers[0].ReviewerId == reviewer.Id;
                                                if (isSelected)
                                                {
                                                    <option value="@reviewer.Id" selected>@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                                else
                                                {
                                                    <option value="@reviewer.Id">@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    
                                    <!-- Reviewer 2 -->
                                    <div class="mb-3">
                                        <label for="reviewer2_@paper.SubmissionId" class="form-label fw-semibold">Reviewer 2</label>
                                        <select class="form-select reviewer-select" id="reviewer2_@paper.SubmissionId" name="reviewerIds">
                                            <option value="">-- Select Reviewer 2 (Optional) --</option>
                                            @foreach (var reviewer in reviewers)
                                            {
                                                var isSelected = paper.AssignedReviewers.Count > 1 && paper.AssignedReviewers[1].ReviewerId == reviewer.Id;
                                                if (isSelected)
                                                {
                                                    <option value="@reviewer.Id" selected>@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                                else
                                                {
                                                    <option value="@reviewer.Id">@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    
                                    <!-- Reviewer 3 -->
                                    <div class="mb-3">
                                        <label for="reviewer3_@paper.SubmissionId" class="form-label fw-semibold">Reviewer 3</label>
                                        <select class="form-select reviewer-select" id="reviewer3_@paper.SubmissionId" name="reviewerIds">
                                            <option value="">-- Select Reviewer 3 (Optional) --</option>
                                            @foreach (var reviewer in reviewers)
                                            {
                                                var isSelected = paper.AssignedReviewers.Count > 2 && paper.AssignedReviewers[2].ReviewerId == reviewer.Id;
                                                if (isSelected)
                                                {
                                                    <option value="@reviewer.Id" selected>@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                                else
                                                {
                                                    <option value="@reviewer.Id">@reviewer.FullName (@reviewer.Email)</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card bg-light h-100">
                                        <div class="card-body">
                                            <h6 class="card-title mb-3">
                                                <i class="fas fa-users me-2"></i>Available Reviewers
                                            </h6>
                                            <div class="list-group" style="max-height: 300px; overflow-y: auto;">
                                                @foreach (var reviewer in reviewers)
                                                {
                                                    <div class="list-group-item list-group-item-action">
                                                        <div class="d-flex w-100 justify-content-between">
                                                            <h6 class="mb-1">@reviewer.FullName</h6>
                                                        </div>
                                                        <p class="mb-1 small text-muted">@reviewer.Email</p>
                                                    </div>
                                                }
                                                @if (!reviewers.Any())
                                                {
                                                    <div class="list-group-item">
                                                        <p class="text-muted mb-0">No reviewers available</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="alert alert-info mt-3">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Note:</strong> You can assign a maximum of 3 reviewers per paper. You can leave some fields empty if you want to assign fewer than 3 reviewers.
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Assign Reviewers
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}

@section Styles {
    <style>
        /* Ensure table cells don't overflow */
        .table-responsive table.table tbody td {
            word-wrap: break-word;
            overflow-wrap: break-word;
            max-width: 0;
        }
        
        /* Ensure badges and buttons wrap properly */
        .table-responsive table.table tbody td .badge,
        .table-responsive table.table tbody td .btn {
            white-space: normal;
            word-wrap: break-word;
        }
        
        /* Prevent text from overlapping */
        .table-responsive table.table tbody td * {
            max-width: 100%;
        }
    </style>
}

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Handle reviewer selection - prevent duplicates by hiding selected reviewers in other dropdowns
        function updateReviewerDropdowns(form) {
            const allSelects = form.querySelectorAll('.reviewer-select');
            const selectedValues = [];
            
            // Get all selected reviewer IDs (excluding empty)
            allSelects.forEach(select => {
                if (select.value && select.value !== '') {
                    selectedValues.push(select.value);
                }
            });
            
            // Update each dropdown to show/hide options
            allSelects.forEach(select => {
                const currentValue = select.value;
                const options = select.querySelectorAll('option');
                
                options.forEach(option => {
                    const optionValue = option.value;
                    
                    // Always show empty option and current selection
                    if (optionValue === '' || optionValue === currentValue) {
                        option.style.display = '';
                        option.disabled = false;
                    } else if (selectedValues.includes(optionValue)) {
                        // Hide options that are selected in other dropdowns
                        option.style.display = 'none';
                        option.disabled = true;
                    } else {
                        // Show available options
                        option.style.display = '';
                        option.disabled = false;
                    }
                });
            });
        }
        
        // Initialize on page load and on change
        document.querySelectorAll('.reviewer-select').forEach(select => {
            select.addEventListener('change', function() {
                const form = this.closest('form');
                updateReviewerDropdowns(form);
            });
        });
        
        // Initialize on modal show
        document.querySelectorAll('[id^="assignReviewerModal"]').forEach(modal => {
            modal.addEventListener('shown.bs.modal', function() {
                const form = this.querySelector('form');
                if (form) {
                    updateReviewerDropdowns(form);
                }
            });
        });

        // Update form submission to validate reviewer selection
        document.querySelectorAll('form[id^="assignReviewersForm"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                const selects = form.querySelectorAll('.reviewer-select');
                const selectedReviewers = [];
                
                selects.forEach(select => {
                    if (select.value && select.value !== '') {
                        selectedReviewers.push(select.value);
                    }
                });
                
                // Check for duplicates
                const uniqueReviewers = [...new Set(selectedReviewers)];
                if (selectedReviewers.length !== uniqueReviewers.length) {
                    e.preventDefault();
                    alert('Bạn không thể chọn cùng một reviewer nhiều lần. Vui lòng chọn lại.');
                    return false;
                }
                
                // Check maximum 3 reviewers
                if (selectedReviewers.length > 3) {
                    e.preventDefault();
                    alert('Tối đa chỉ được chọn 3 reviewers.');
                    return false;
                }
                
                // At least one reviewer must be selected
                if (selectedReviewers.length === 0) {
                    e.preventDefault();
                    alert('Vui lòng chọn ít nhất một reviewer.');
                    return false;
                }
                
                // Remove empty selects from form submission
                selects.forEach(select => {
                    if (!select.value || select.value === '') {
                        select.disabled = true;
                    }
                });
            });
        });
    </script>
}

