@model List<SciSubmit.Models.Admin.FullPaperViewModel>
@{
    ViewData["Title"] = "Full Papers Management";
    var reviewers = ViewBag.Reviewers as List<dynamic> ?? new List<dynamic>();
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-file-pdf me-2"></i>Full Papers Management
        </h2>
        <p class="text-muted">Manage full paper submissions and assign reviewers</p>
    </div>

    <!-- Full Papers Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Version</th>
                                <th>File</th>
                                <th>Uploaded</th>
                                <th>Assigned Reviewers</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var paper in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="d-block mb-1">@paper.Title</strong>
                                        <small class="text-muted">Submission ID: @paper.SubmissionId</small>
                                    </td>
                                    <td>@paper.AuthorName</td>
                                    <td>
                                        <span class="badge bg-info">v@paper.VersionNumber</span>
                                    </td>
                                    <td>
                                        <a href="@paper.FileUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-download me-1"></i>Download
                                        </a>
                                        <small class="d-block text-muted mt-1">@(paper.FileSize / 1024) KB</small>
                                    </td>
                                    <td>
                                        <small>@paper.UploadedAt.ToString("MM/dd/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (paper.AssignedReviewers.Any())
                                        {
                                            <div class="d-flex flex-column gap-1">
                                                @foreach (var reviewer in paper.AssignedReviewers)
                                                {
                                                    <div class="d-flex align-items-center gap-2">
                                                        <span class="badge @(reviewer.Status == "Pending" ? "bg-warning" : reviewer.Status == "Accepted" ? "bg-success" : "bg-secondary")">
                                                            @reviewer.ReviewerName
                                                        </span>
                                                        <small class="text-muted">(@reviewer.Status)</small>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No reviewers assigned</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (paper.CanAssignReviewer)
                                        {
                                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#assignReviewerModal@paper.SubmissionId">
                                                <i class="fas fa-user-plus me-1"></i>Assign Reviewers
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Cannot assign</span>
                                        }
                                    </td>
                                </tr>

                                <!-- Assign Reviewer Modal -->
                                <div class="modal fade" id="assignReviewerModal@paper.SubmissionId" tabindex="-1" aria-labelledby="assignReviewerModalLabel@paper.SubmissionId" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form asp-action="AssignReviewers" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="submissionId" value="@paper.SubmissionId" />
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="assignReviewerModalLabel@paper.SubmissionId">
                                                        Assign Reviewers - @paper.Title
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p class="text-muted mb-3">Select up to 3 reviewers for this paper:</p>
                                                    <div class="mb-3">
                                                        @foreach (var reviewer in reviewers)
                                                        {
                                                            var isChecked = paper.AssignedReviewers.Any(ar => ar.ReviewerId == reviewer.Id);
                                                            <div class="form-check">
                                                                <input class="form-check-input" type="checkbox" name="reviewerIds" value="@reviewer.Id" id="reviewer@(paper.SubmissionId)_@reviewer.Id" @(isChecked ? "checked" : "") />
                                                                <label class="form-check-label" for="reviewer@(paper.SubmissionId)_@reviewer.Id">
                                                                    @reviewer.FullName <small class="text-muted">(@reviewer.Email)</small>
                                                                </label>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="alert alert-info">
                                                        <i class="fas fa-info-circle me-2"></i>
                                                        <strong>Note:</strong> You can assign a maximum of 3 reviewers per paper.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-save me-2"></i>Assign Reviewers
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-file-pdf fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No full papers found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Limit reviewer selection to 3
        document.querySelectorAll('input[name="reviewerIds"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const checked = document.querySelectorAll('input[name="reviewerIds"]:checked');
                if (checked.length > 3) {
                    this.checked = false;
                    alert('Maximum 3 reviewers can be assigned per paper.');
                }
            });
        });

        // Update form submission to validate reviewer count
        document.querySelectorAll('form[action="/Admin/AssignReviewers"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                const checked = form.querySelectorAll('input[name="reviewerIds"]:checked');
                if (checked.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one reviewer.');
                    return false;
                }
                if (checked.length > 3) {
                    e.preventDefault();
                    alert('Maximum 3 reviewers can be assigned per paper.');
                    return false;
                }
            });
        });
    </script>
}

