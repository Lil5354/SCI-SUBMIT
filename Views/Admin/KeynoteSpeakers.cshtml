@model List<SciSubmit.Models.Conference.KeynoteSpeaker>
@{
    ViewData["Title"] = "Manage Keynote Speakers";
}

@section Styles {
    <link rel="stylesheet" href="~/css/keynote-admin.css" asp-append-version="true" />
}

<div class="container-fluid my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-gradient mb-2">
                <i class="fas fa-microphone me-2"></i>Manage Keynote Speakers
            </h2>
            <p class="text-muted mb-0">Quản lý diễn giả chính của hội thảo</p>
        </div>
        <div>
            <a href="@Url.Action("KeynoteSpeakers", "Home")" target="_blank" class="btn btn-outline-info me-2">
                <i class="fas fa-eye me-2"></i>Xem trang công khai
            </a>
            <a href="@Url.Action("CreateKeynoteSpeaker")" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Thêm Diễn giả
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-microphone fa-3x text-muted mb-3"></i>
                <p class="text-muted">Chưa có diễn giả nào. Hãy thêm diễn giả đầu tiên.</p>
                <a href="@Url.Action("CreateKeynoteSpeaker")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Thêm Diễn giả
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var speaker in Model.OrderBy(s => s.OrderIndex).ThenBy(s => s.Id))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="keynote-admin-card card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-start mb-3">
                                <div class="keynote-admin-image me-3">
                                    @if (!string.IsNullOrEmpty(speaker.PhotoUrl))
                                    {
                                        <img src="@speaker.PhotoUrl" alt="@speaker.Name" class="keynote-admin-img">
                                    }
                                    else
                                    {
                                        <div class="keynote-admin-placeholder">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                </div>
                                <div class="flex-grow-1">
                                    <h5 class="mb-1">@speaker.Name</h5>
                                    @if (!string.IsNullOrEmpty(speaker.Title))
                                    {
                                        <p class="text-muted small mb-0">@speaker.Title</p>
                                    }
                                    @if (!string.IsNullOrEmpty(speaker.Affiliation))
                                    {
                                        <p class="text-muted small mb-0">@speaker.Affiliation</p>
                                    }
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(speaker.Topic))
                            {
                                <div class="mb-2">
                                    <strong class="text-danger">Topic:</strong>
                                    <p class="mb-0 small">@speaker.Topic</p>
                                </div>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <span class="badge bg-secondary">Thứ tự: @speaker.OrderIndex</span>
                                    @if (speaker.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2 mt-3">
                                <a href="@Url.Action("EditKeynoteSpeaker", new { id = speaker.Id })" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                <form asp-action="DeleteKeynoteSpeaker" asp-route-id="@speaker.Id" method="post" class="flex-fill" onsubmit="return confirm('Bạn có chắc chắn muốn xóa diễn giả này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                        <i class="fas fa-trash me-1"></i>Xóa
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


