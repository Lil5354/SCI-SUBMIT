@model SciSubmit.Models.Admin.ReportStatisticsViewModel
@{
    ViewData["Title"] = "Reports & Statistics";
}

<div class="container-fluid my-4">
    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-chart-bar me-2"></i>Reports & Statistics
                </h2>
                <p class="text-muted mb-0">Statistics and overview reports about the conference</p>
            </div>
            <div>
                <button class="btn btn-outline-primary" onclick="exportReport()">
                    <i class="fas fa-file-excel me-2"></i>Export Report
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-primary text-white mx-auto mb-3">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="text-primary mb-1">@Model.TotalSubmissions</h3>
                    <p class="text-muted mb-0">Total Submissions</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-success text-white mx-auto mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="text-success mb-1">@Model.TotalAccepted</h3>
                    <p class="text-muted mb-0">Accepted</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-danger text-white mx-auto mb-3">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <h3 class="text-danger mb-1">@Model.TotalRejected</h3>
                    <p class="text-muted mb-0">Rejected</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-info text-white mx-auto mb-3">
                        <i class="fas fa-clipboard-check"></i>
                    </div>
                    <h3 class="text-info mb-1">@Model.TotalUnderReview</h3>
                    <p class="text-muted mb-0">Under Review</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Submissions by Topic -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Submissions by Field</h5>
                </div>
                <div class="card-body">
                    @if (Model.SubmissionsByTopic.Any())
                    {
                        var totalByTopic = Model.SubmissionsByTopic.Values.Sum();
                        @foreach (var item in Model.SubmissionsByTopic.OrderByDescending(x => x.Value))
                        {
                            var percentage = totalByTopic > 0 ? (int)((item.Value / (double)totalByTopic) * 100) : 0;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>@item.Key</span>
                                    <span class="badge bg-primary">@item.Value (@percentage%)</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @percentage%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>

        <!-- Submissions by Status -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Submissions by Status</h5>
                </div>
                <div class="card-body">
                    @if (Model.SubmissionsByStatus.Any())
                    {
                        var totalByStatus = Model.SubmissionsByStatus.Values.Sum();
                        @foreach (var item in Model.SubmissionsByStatus.OrderByDescending(x => x.Value))
                        {
                            var percentage = totalByStatus > 0 ? (int)((item.Value / (double)totalByStatus) * 100) : 0;
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>@item.Key</span>
                                    <span class="badge bg-success">@item.Value (@percentage%)</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @percentage%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Review Statistics -->
    <div class="row g-4 mt-2">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Review Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-primary">@Model.ReviewStats.TotalAssignments</h4>
                                <small class="text-muted">Tổng phân công</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-warning">@Model.ReviewStats.PendingAssignments</h4>
                                <small class="text-muted">Chờ phản hồi</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-success">@Model.ReviewStats.AcceptedAssignments</h4>
                                <small class="text-muted">Đã nhận lời</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h4 class="text-info">@Model.ReviewStats.CompletedAssignments</h4>
                                <small class="text-muted">Đã hoàn thành</small>
                            </div>
                        </div>
                    </div>
                    @if (Model.ReviewStats.AverageCompletionTime > 0)
                    {
                        <hr>
                        <div class="text-center">
                            <h6>Thời gian hoàn thành trung bình</h6>
                            <h4 class="text-primary">@Model.ReviewStats.AverageCompletionTime.ToString("F1") ngày</h4>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-star me-2"></i>Điểm phản biện trung bình</h5>
                </div>
                <div class="card-body text-center">
                    @if (Model.AverageReviewScore > 0)
                    {
                        <h1 class="display-4 text-warning mb-3">@Model.AverageReviewScore.ToString("F2")</h1>
                        <p class="text-muted">Trên thang điểm 5.0</p>
                    }
                    else
                    {
                        <p class="text-muted">Chưa có dữ liệu</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportReport() {
            // TODO: Implement Excel export
            alert('Tính năng xuất Excel đang được phát triển');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
