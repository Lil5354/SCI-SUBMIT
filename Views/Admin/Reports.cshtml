@{
    ViewData["Title"] = "Báo cáo & Thống kê";
}

<div class="container-fluid my-4">
    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-chart-bar me-2"></i>Báo cáo & Thống kê
                </h2>
                <p class="text-muted mb-0">Thống kê và báo cáo tổng quan về hội thảo</p>
            </div>
            <div>
                <button class="btn btn-outline-primary" onclick="exportReport()">
                    <i class="fas fa-file-excel me-2"></i>Xuất báo cáo
                </button>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-primary text-white mx-auto mb-3">
                        <i class="fas fa-file-upload"></i>
                    </div>
                    <h3 class="text-primary mb-1">156</h3>
                    <p class="text-muted mb-0">Tổng số bài nộp</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-success text-white mx-auto mb-3">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3 class="text-success mb-1">89</h3>
                    <p class="text-muted mb-0">Đã chấp nhận</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-warning text-white mx-auto mb-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="text-warning mb-1">234</h3>
                    <p class="text-muted mb-0">Số lượng đăng ký</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <div class="stat-card-icon bg-info text-white mx-auto mb-3">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <h3 class="text-info mb-1">45</h3>
                    <p class="text-muted mb-0">Số Reviewer</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Submissions by Topic -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Bài nộp theo lĩnh vực</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Tài chính & Kế toán</span>
                            <span class="badge bg-primary">45 (29%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 29%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Kinh tế</span>
                            <span class="badge bg-info">38 (24%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 24%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Thương mại</span>
                            <span class="badge bg-success">28 (18%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 18%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Quản trị kinh doanh</span>
                            <span class="badge bg-warning">25 (16%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 16%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Khác</span>
                            <span class="badge bg-secondary">20 (13%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-secondary" role="progressbar" style="width: 13%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Submissions by Status -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Bài nộp theo trạng thái</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đã chấp nhận</span>
                            <span class="badge bg-success">89 (57%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 57%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đang phản biện</span>
                            <span class="badge bg-warning">45 (29%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 29%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Yêu cầu chỉnh sửa</span>
                            <span class="badge bg-info">15 (10%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 10%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Đã từ chối</span>
                            <span class="badge bg-danger">7 (4%)</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 4%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Detailed Reports -->
    <div class="card shadow-sm border-0 mt-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Báo cáo chi tiết</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="card border-primary">
                        <div class="card-body text-center">
                            <i class="fas fa-file-pdf fa-3x text-danger mb-3"></i>
                            <h6 class="mb-2">Báo cáo tổng hợp</h6>
                            <button class="btn btn-outline-primary btn-sm" onclick="generateReport('summary')">
                                <i class="fas fa-download me-2"></i>Tải xuống
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-success">
                        <div class="card-body text-center">
                            <i class="fas fa-file-excel fa-3x text-success mb-3"></i>
                            <h6 class="mb-2">Danh sách bài nộp</h6>
                            <button class="btn btn-outline-success btn-sm" onclick="generateReport('submissions')">
                                <i class="fas fa-download me-2"></i>Tải xuống
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-info">
                        <div class="card-body text-center">
                            <i class="fas fa-file-alt fa-3x text-info mb-3"></i>
                            <h6 class="mb-2">Danh sách đăng ký</h6>
                            <button class="btn btn-outline-info btn-sm" onclick="generateReport('registrations')">
                                <i class="fas fa-download me-2"></i>Tải xuống
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

