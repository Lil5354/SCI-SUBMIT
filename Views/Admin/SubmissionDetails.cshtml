@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);

        // Load reviewers when modal opens
        function loadReviewers(submissionId) {
            $('#assignSubmissionId').val(submissionId);
            
            // Update modal title and show appropriate section based on submission status
            var status = '@Model.Status';
            var isFullPaper = status !== 'PendingAbstractReview';
            
            if (status === 'PendingAbstractReview') {
                $('#modalTitle').text('Phân công phản biện tóm tắt');
                $('#singleReviewerSection').show();
                $('#multipleReviewersSection').hide();
            } else {
                $('#modalTitle').text('Phân công phản biện bài đầy đủ');
                $('#singleReviewerSection').hide();
                $('#multipleReviewersSection').show();
            }

            // Reset form
            $('.reviewer-select').html('<option value="">-- Chọn Reviewer --</option>');
            $('#reviewDeadline').val('');
            $('#reviewerDetails').hide();
            $('#reviewerError').hide();

            // Load available reviewers
            $.ajax({
                url: '@Url.Action("GetAvailableReviewers", "Admin")',
                type: 'GET',
                data: { submissionId: submissionId },
                success: function(response) {
                    if (response.success && response.reviewers) {
                        // Populate all reviewer selects
                        $('.reviewer-select').each(function() {
                            var select = $(this);
                            select.html('<option value="">-- Chọn Reviewer --</option>');
                            response.reviewers.forEach(function(reviewer) {
                                select.append($('<option>', {
                                    value: reviewer.id,
                                    text: reviewer.fullName + ' (' + reviewer.email + ')'
                                }));
                            });
                        });
                    } else {
                        alert('Không thể tải danh sách reviewer. Vui lòng thử lại.');
                    }
                },
                error: function() {
                    alert('Lỗi khi tải danh sách reviewer.');
                }
            });
        }

        // Validate reviewers are not duplicated
        function validateReviewers() {
            var status = '@Model.Status';
            if (status === 'PendingAbstractReview') {
                // Single reviewer validation
                var reviewerId = $('#reviewerSelect').val();
                if (!reviewerId) {
                    $('#reviewerError').text('Vui lòng chọn reviewer.').show();
                    return false;
                }
                $('#reviewerError').hide();
                return true;
            } else {
                // Multiple reviewers validation
                var reviewerIds = [];
                var hasValue = false;
                
                for (var i = 1; i <= 3; i++) {
                    var reviewerId = $('#reviewerSelect' + i).val();
                    if (reviewerId) {
                        hasValue = true;
                        if (reviewerIds.includes(reviewerId)) {
                            $('#reviewerError').text('Các reviewers không được trùng nhau. Vui lòng chọn 3 reviewers khác nhau.').show();
                            return false;
                        }
                        reviewerIds.push(reviewerId);
                    }
                }
                
                if (!hasValue) {
                    $('#reviewerError').text('Vui lòng chọn ít nhất một reviewer.').show();
                    return false;
                }
                
                if (reviewerIds.length < 3) {
                    $('#reviewerError').text('Vui lòng chọn đủ 3 reviewers.').show();
                    return false;
                }
                
                $('#reviewerError').hide();
                return true;
            }
        }

        // Monitor reviewer selection changes to prevent duplicates
        $(document).on('change', '.reviewer-select', function() {
            var status = '@Model.Status';
            if (status !== 'PendingAbstractReview') {
                var currentSelect = $(this);
                var currentValue = currentSelect.val();
                var currentId = currentSelect.attr('id');
                
                // Check for duplicates
                $('.reviewer-select').not(currentSelect).each(function() {
                    if ($(this).val() === currentValue && currentValue !== '') {
                        $('#reviewerError').text('Reviewer này đã được chọn ở vị trí khác. Vui lòng chọn reviewer khác.').show();
                        setTimeout(function() {
                            $('#reviewerError').hide();
                        }, 3000);
                    }
                });
                
                // Re-validate
                validateReviewers();
            }
        });

        // Show reviewer details when selected
        $('#reviewerSelect').on('change', function() {
            var reviewerId = $(this).val();
            if (reviewerId) {
                // Get reviewer details from the selected option
                var reviewerText = $(this).find('option:selected').text();
                var parts = reviewerText.split(' (');
                var name = parts[0];
                var email = parts[1] ? parts[1].replace(')', '') : '';

                $('#reviewerInfo').html(
                    '<p class="mb-1"><strong>Tên:</strong> ' + name + '</p>' +
                    '<p class="mb-0"><strong>Email:</strong> ' + email + '</p>'
                );
                $('#reviewerDetails').show();
            } else {
                $('#reviewerDetails').hide();
            }
        });

        // Submit assignment form
        $('#assignReviewerForm').on('submit', function(e) {
            e.preventDefault();

            var submissionId = $('#assignSubmissionId').val();
            var status = '@Model.Status';
            var isFullPaper = status !== 'PendingAbstractReview';
            var deadline = $('#reviewDeadline').val();

            // Validate deadline
            if (!deadline) {
                alert('Vui lòng chọn deadline.');
                return;
            }

            // Convert deadline to UTC format
            var deadlineDate = new Date(deadline);
            if (deadlineDate <= new Date()) {
                alert('Deadline phải trong tương lai.');
                return;
            }

            // Validate reviewers
            if (!validateReviewers()) {
                return;
            }

            // Disable submit button
            var submitBtn = $(this).find('button[type="submit"]');
            submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...');

            var ajaxData = {
                submissionId: submissionId,
                deadline: deadline,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            };

            if (isFullPaper) {
                // Full paper: send 3 reviewers
                var reviewerIds = [];
                for (var i = 1; i <= 3; i++) {
                    var reviewerId = $('#reviewerSelect' + i).val();
                    if (reviewerId) {
                        reviewerIds.push(reviewerId);
                    }
                }
                // Convert reviewerIds to array format for ASP.NET Core model binding
                reviewerIds.forEach(function(id, index) {
                    ajaxData['reviewerIds[' + index + ']'] = id;
                });
                
                $.ajax({
                    url: '@Url.Action("AssignFullPaperReviewers", "Admin")',
                    type: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    traditional: true,
                    data: ajaxData,
                    success: function(response) {
                        if (response.success) {
                            $('#assignReviewerModal').modal('hide');
                            location.reload(); // Reload page to show updated assignment
                        } else {
                            alert('Lỗi: ' + (response.message || 'Không thể phân công reviewers.'));
                            submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Phân công');
                        }
                    },
                    error: function(xhr) {
                        var errorMsg = 'Lỗi khi phân công reviewers.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        alert(errorMsg);
                        submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Phân công');
                    }
                });
            } else {
                // Abstract review: send 1 reviewer
                ajaxData.reviewerId = $('#reviewerSelect').val();
                
                $.ajax({
                    url: '@Url.Action("AssignReviewer", "Admin")',
                    type: 'POST',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    data: ajaxData,
                    success: function(response) {
                        if (response.success) {
                            $('#assignReviewerModal').modal('hide');
                            location.reload(); // Reload page to show updated assignment
                        } else {
                            alert('Lỗi: ' + (response.message || 'Không thể phân công reviewer.'));
                            submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Phân công');
                        }
                    },
                    error: function(xhr) {
                        var errorMsg = 'Lỗi khi phân công reviewer.';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        alert(errorMsg);
                        submitBtn.prop('disabled', false).html('<i class="fas fa-paper-plane me-2"></i>Phân công');
                    }
                });
            }
        });
    </script>
}

