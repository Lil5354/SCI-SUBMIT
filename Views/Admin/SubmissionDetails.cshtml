@model SciSubmit.Models.Admin.SubmissionDetailsViewModel
@{
    ViewData["Title"] = "Submission Details - Admin";
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-file-alt me-2"></i>Submission Details
                </h2>
                <p class="text-muted mb-0">View and manage paper</p>
            </div>
            <div>
                <a href="@Url.Action("Submissions")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Submission Info -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Paper Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Title</label>
                        <h5 class="mb-0">@Model.Title</h5>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Abstract</label>
                        <p class="mb-0">@Model.Abstract</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Chủ đề</label>
                            <div>
                                @foreach (var topic in Model.Topics)
                                {
                                    <span class="badge bg-info me-1">@topic</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold text-muted">Keywords</label>
                            <div>
                                @foreach (var keyword in Model.Keywords)
                                {
                                    <span class="badge bg-primary me-1">@keyword</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Main Author</label>
                        <p class="mb-0">
                            <strong>@Model.AuthorName</strong>
                            @if (!string.IsNullOrEmpty(Model.AuthorEmail))
                            {
                                <br>
                                <small class="text-muted">@Model.AuthorEmail</small>
                            }
                            @if (!string.IsNullOrEmpty(Model.AuthorAffiliation))
                            {
                                <br>
                                <small class="text-muted">@Model.AuthorAffiliation</small>
                            }
                        </p>
                    </div>

                    @if (Model.CoAuthors.Any())
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold text-muted">Đồng tác giả</label>
                            <ul class="list-unstyled mb-0">
                                @foreach (var author in Model.CoAuthors)
                                {
                                    <li class="mb-2">
                                        <strong>@author.FullName</strong>
                                        @if (author.IsCorrespondingAuthor)
                                        {
                                            <span class="badge bg-success ms-2">Main Author</span>
                                        }
                                        <br>
                                        <small class="text-muted ms-4">
                                            @author.Email
                                            @if (!string.IsNullOrEmpty(author.Affiliation))
                                            {
                                                <text> | @author.Affiliation</text>
                                            }
                                        </small>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>

            <!-- Files -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-file me-2"></i>Uploaded Files</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.AbstractFileUrl))
                    {
                        <div class="list-group mb-3">
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-file-word text-primary me-2"></i>
                                        <strong>Abstract File</strong>
                                        <br>
                                        @if (Model.AbstractSubmittedAt.HasValue)
                                        {
                                            <small class="text-muted">Nộp lúc: @Model.AbstractSubmittedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                    </div>
                                    <a href="@Model.AbstractFileUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                        <i class="fas fa-download me-1"></i>Tải xuống
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    @if (Model.FullPaperVersions.Any())
                    {
                        <h6 class="mb-3">Full Paper Versions:</h6>
                        <div class="list-group">
                            @foreach (var version in Model.FullPaperVersions)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-file-word text-primary me-2"></i>
                                            <strong>Version @version.VersionNumber @(version.IsCurrentVersion ? "(Current)" : "")</strong>
                                            <br>
                                            <small class="text-muted">@version.FileName</small>
                                            <br>
                                            <small class="text-muted">Upload lúc: @version.UploadedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                        </div>
                                        <a href="@version.FileUrl" class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="fas fa-download me-1"></i>Tải xuống
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (string.IsNullOrEmpty(Model.AbstractFileUrl) && !Model.FullPaperVersions.Any())
                    {
                        <p class="text-muted mb-0">No files uploaded</p>
                    }
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AbstractRejectionReason))
            {
                <div class="card shadow-sm border-0 mb-4 border-danger">
                    <div class="card-header bg-danger text-white">
                        <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Lý do từ chối</h6>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.AbstractRejectionReason</p>
                    </div>
                </div>
            }

            <!-- Review Results -->
            @if (Model.ReviewResults.Any())
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard-check me-2"></i>Review Results</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var review in Model.ReviewResults)
                        {
                            <div class="review-result-card mb-4 p-4 border rounded" style="background-color: #f8f9fa;">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="fas fa-user-tie me-2 text-primary"></i>
                                            <strong>@review.ReviewerName</strong>
                                        </h6>
                                        <small class="text-muted">@review.ReviewerEmail</small>
                                    </div>
                                    <div class="text-end">
                                        <div class="mb-1">
                                            <span class="badge bg-primary fs-6">
                                                Average Score: @(review.AverageScore?.ToString("F2") ?? "N/A")
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            Submitted: @review.SubmittedAt.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                </div>

                                @if (review.Scores.Any())
                                {
                                    <div class="mb-3">
                                        <h6 class="mb-2"><i class="fas fa-chart-bar me-2"></i>Detailed Scores:</h6>
                                        <div class="row g-2">
                                            @foreach (var score in review.Scores)
                                            {
                                                <div class="col-md-6">
                                                    <div class="d-flex justify-content-between align-items-center p-2 bg-white rounded">
                                                        <span class="small">@score.CriterionName:</span>
                                                        <span class="badge bg-info">
                                                            @score.Score / @score.MaxScore
                                                        </span>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(review.Recommendation))
                                {
                                    <div class="mb-3">
                                        <h6 class="mb-2"><i class="fas fa-gavel me-2"></i>Recommendation:</h6>
                                        @{
                                            var recommendationBadgeClass = review.Recommendation switch
                                            {
                                                "Accept" => "bg-success",
                                                "MinorRevision" => "bg-warning",
                                                "MajorRevision" => "bg-warning",
                                                "Reject" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @recommendationBadgeClass fs-6 px-3 py-2">@review.Recommendation</span>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(review.CommentsForAuthor))
                                {
                                    <div class="mb-3">
                                        <h6 class="mb-2"><i class="fas fa-comment-dots me-2 text-info"></i>Comments for Author:</h6>
                                        <div class="p-3 bg-white rounded border">
                                            <p class="mb-0">@review.CommentsForAuthor</p>
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(review.CommentsForAdmin))
                                {
                                    <div class="mb-3">
                                        <h6 class="mb-2"><i class="fas fa-comment-dots me-2 text-warning"></i>Comments for Admin:</h6>
                                        <div class="p-3 bg-white rounded border border-warning">
                                            <p class="mb-0">@review.CommentsForAdmin</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Review Assignments -->
            @if (Model.ReviewAssignments.Any())
            {
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Phản biện đã được phân công</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 35%; min-width: 280px;">Reviewer</th>
                                        <th style="width: 16%; min-width: 140px;" class="text-center">Ngày mời</th>
                                        <th style="width: 16%; min-width: 140px;" class="text-center">Deadline</th>
                                        <th style="width: 21%; min-width: 180px;">Thao tác</th>
                                        <th style="width: 12%; min-width: 120px;" class="text-center">Trạng thái</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var assignment in Model.ReviewAssignments)
                                    {
                                        var assignmentStatusBadgeClass = assignment.Status switch
                                        {
                                            "Pending" => "bg-warning",
                                            "Accepted" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            "Completed" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                        var assignmentStatusText = assignment.Status switch
                                        {
                                            "Pending" => "Chờ phản hồi",
                                            "Accepted" => "Đã chấp nhận",
                                            "Rejected" => "Đã từ chối",
                                            "Completed" => "Đã hoàn thành",
                                            _ => assignment.Status
                                        };
                                        <tr>
                                            <td class="align-middle">
                                                <div class="reviewer-info">
                                                    <div class="reviewer-name">@assignment.ReviewerName</div>
                                                    <div class="reviewer-email">@assignment.ReviewerEmail</div>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="date-time-cell">
                                                    <div class="date-text">@assignment.InvitedAt.ToString("dd/MM/yyyy")</div>
                                                    <div class="time-text">@assignment.InvitedAt.ToString("HH:mm")</div>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="date-time-cell">
                                                    <div class="date-text">@assignment.Deadline.ToString("dd/MM/yyyy")</div>
                                                    <div class="time-text">@assignment.Deadline.ToString("HH:mm")</div>
                                                </div>
                                            </td>
                                            <td class="align-middle">
                                                <div class="action-cell">
                                                    @if (assignment.AcceptedAt.HasValue)
                                                    {
                                                        <small class="text-success d-block mb-1">
                                                            <i class="fas fa-check me-1"></i>Chấp nhận: @assignment.AcceptedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    }
                                                    else if (assignment.RejectedAt.HasValue)
                                                    {
                                                        <small class="text-danger d-block mb-1">
                                                            <i class="fas fa-times me-1"></i>Từ chối: @assignment.RejectedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    }
                                                    @if (assignment.CompletedAt.HasValue)
                                                    {
                                                        <small class="text-info d-block">
                                                            <i class="fas fa-check-circle me-1"></i>Hoàn thành: @assignment.CompletedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                                        </small>
                                                    }
                                                    @if (!assignment.AcceptedAt.HasValue && !assignment.RejectedAt.HasValue && !assignment.CompletedAt.HasValue)
                                                    {
                                                        <small class="text-muted">Chờ phản hồi từ reviewer</small>
                                                    }
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="badge @assignmentStatusBadgeClass">@assignmentStatusText</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar Actions -->
        <div class="col-lg-4">
            <!-- Status -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Status</h6>
                </div>
                <div class="card-body text-center">
                    @{
                        var statusBadgeClass = Model.Status switch
                        {
                            "PendingAbstractReview" => "bg-warning",
                            "AbstractApproved" => "bg-success",
                            "AbstractRejected" => "bg-danger",
                            "UnderReview" => "bg-info",
                            "Accepted" => "bg-success",
                            "Rejected" => "bg-danger",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @statusBadgeClass fs-6 px-4 py-2">@Model.Status</span>
                    @if (Model.AbstractReviewedAt.HasValue)
                    {
                        <p class="text-muted mt-2 mb-0">
                            <small>Duyệt lúc: @Model.AbstractReviewedAt.Value.ToString("dd/MM/yyyy HH:mm")</small>
                        </p>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.CanApproveAbstract)
                        {
                            <form method="post" action="@Url.Action("ApproveAbstract", new { id = Model.Id })" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100" onclick="return confirm('Bạn có chắc chắn muốn chấp nhận tóm tắt này?');">
                                    <i class="fas fa-check me-2"></i>Duyệt tóm tắt
                                </button>
                            </form>
                        }

                        @if (Model.CanRejectAbstract)
                        {
                            <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="fas fa-times me-2"></i>Từ chối tóm tắt
                            </button>
                        }

                        @if (Model.CanAssignReviewer)
                        {
                            <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#assignReviewerModal" onclick="loadReviewers(@Model.Id)">
                                <i class="fas fa-user-tie me-2"></i>
                                @if (Model.Status == "PendingAbstractReview")
                                {
                                    <text>Phân công phản biện tóm tắt</text>
                                }
                                else
                                {
                                    <text>Phân công phản biện</text>
                                }
                            </button>
                        }

                        @if (Model.CanMakeFinalDecision)
                        {
                            <a href="@Url.Action("FinalDecision", new { id = Model.Id })" class="btn btn-warning w-100">
                                <i class="fas fa-gavel me-2"></i>Ra quyết định cuối cùng
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

