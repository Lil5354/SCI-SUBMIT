@model SciSubmit.Models.Admin.PagedList<SciSubmit.Models.Admin.SubmissionViewModel>
@{
    ViewData["Title"] = "Manage Submissions";
    var filter = ViewBag.Filter as SciSubmit.Models.Admin.SubmissionFilterViewModel ?? new SciSubmit.Models.Admin.SubmissionFilterViewModel();
    var topics = ViewBag.Topics as List<SciSubmit.Models.Content.Topic> ?? new List<SciSubmit.Models.Content.Topic>();
    var keywords = ViewBag.Keywords as List<SciSubmit.Models.Content.Keyword> ?? new List<SciSubmit.Models.Content.Keyword>();
    var statusOptions = ViewBag.StatusOptions as string[] ?? Array.Empty<string>();
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-list-alt me-2"></i>Manage Submissions
                </h2>
                <p class="text-muted mb-0">List of all submitted papers</p>
            </div>
            <div>
                <button class="btn btn-outline-primary" onclick="exportToExcel()">
                    <i class="fas fa-file-excel me-2"></i>Export to Excel
                </button>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("Submissions")">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label"><i class="fas fa-search me-1"></i>Search</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" class="form-control" name="SearchTerm" placeholder="Paper title, author..." value="@filter.SearchTerm">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-filter me-1"></i>Status</label>
                        <select class="form-select" name="Status">
                            <option value="">All</option>
                            @foreach (var status in statusOptions)
                            {
                                <option value="@status" selected="@(filter.Status == status)">@status</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-tag me-1"></i>Topic</label>
                        <select class="form-select" name="TopicId">
                            <option value="">All</option>
                            @foreach (var topic in topics)
                            {
                                <option value="@topic.Id" selected="@(filter.TopicId == topic.Id)">@topic.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label"><i class="fas fa-key me-1"></i>Keyword</label>
                        <select class="form-select" name="KeywordId">
                            <option value="">All</option>
                            @foreach (var keyword in keywords)
                            {
                                <option value="@keyword.Id" selected="@(filter.KeywordId == keyword.Id)">@keyword.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Submissions Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag me-1"></i>#</th>
                                <th><i class="fas fa-heading me-1"></i>Title</th>
                                <th><i class="fas fa-user me-1"></i>Author</th>
                                <th><i class="fas fa-tag me-1"></i>Topic</th>
                                <th class="text-center"><i class="fas fa-info-circle me-1"></i>Status</th>
                                <th class="text-center"><i class="fas fa-calendar me-1"></i>Submitted</th>
                                <th class="text-center"><i class="fas fa-cog me-1"></i>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = (Model.Page - 1) * Model.PageSize + 1;
                            }
                            @foreach (var submission in Model.Items)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>
                                        <strong class="d-block mb-1">@submission.Title</strong>
                                        @if (submission.Keywords.Any())
                                        {
                                            <small class="text-muted d-block">Keywords: @string.Join(", ", submission.Keywords)</small>
                                        }
                                    </td>
                                    <td>@submission.AuthorName</td>
                                    <td>
                                        @if (submission.Topics.Any())
                                        {
                                            @string.Join(", ", submission.Topics)
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @{
                                            var statusBadgeClass = submission.Status switch
                                            {
                                                "PendingAbstractReview" => "bg-warning",
                                                "AbstractApproved" => "bg-success",
                                                "AbstractRejected" => "bg-danger",
                                                "UnderReview" => "bg-info",
                                                "Accepted" => "bg-success",
                                                "Rejected" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusBadgeClass">@submission.Status</span>
                                    </td>
                                    <td class="text-center">
                                        @if (submission.SubmittedAt.HasValue)
                                        {
                                            @submission.SubmittedAt.Value.ToString("dd/MM/yyyy")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-1">
                                            <a href="@Url.Action("SubmissionDetails", new { id = submission.Id })" class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Submissions", new { Page = Model.Page - 1, filter.Status, filter.TopicId, filter.KeywordId, filter.SearchTerm })"><i class="fas fa-chevron-left me-1"></i>Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Submissions", new { Page = i, filter.Status, filter.TopicId, filter.KeywordId, filter.SearchTerm })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Submissions", new { Page = Model.Page + 1, filter.Status, filter.TopicId, filter.KeywordId, filter.SearchTerm })">Next<i class="fas fa-chevron-right ms-1"></i></a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No submissions found</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function exportToExcel() {
            // TODO: Implement Excel export
            alert('Excel export feature is under development');
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
