@model SciSubmit.Models.Admin.TimelineViewModel
@{
    ViewData["Title"] = "Manage Timeline";
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">
            <i class="fas fa-stream me-2"></i>Manage Timeline
        </h2>
        <p class="text-muted">Manage timeline displayed on dashboard</p>
    </div>

    <!-- Timeline Management Form -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Timeline Items</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateTimeline" method="post" id="timelineForm">
                @Html.AntiForgeryToken()
                
                <div id="timelineItemsContainer">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        @for (int i = 0; i < Model.Items.Count; i++)
                        {
                            <div class="timeline-item-row mb-3 p-3 border rounded" data-index="@i">
                                <div class="row g-3">
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Order</label>
                                        <input type="number" name="Items[@i].Order" value="@Model.Items[i].Order" class="form-control" min="0" required />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                                        <input type="text" name="Items[@i].Title" value="@Model.Items[i].Title" class="form-control" required />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Date</label>
                                        <input type="datetime-local" name="Items[@i].Date" value="@(Model.Items[i].Date?.ToString("yyyy-MM-ddTHH:mm"))" class="form-control" />
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label fw-semibold">Active</label>
                                        <div class="form-check form-switch mt-2">
                                            <input type="checkbox" name="Items[@i].IsActive" value="true" class="form-check-input" @(Model.Items[i].IsActive ? "checked" : "") />
                                            <input type="hidden" name="Items[@i].IsActive" value="false" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label fw-semibold">Description</label>
                                        <textarea name="Items[@i].Description" class="form-control" rows="2">@Model.Items[i].Description</textarea>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Icon (Font Awesome)</label>
                                        <input type="text" name="Items[@i].Icon" value="@Model.Items[i].Icon" class="form-control" placeholder="fas fa-circle" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Color</label>
                                        <div class="input-group">
                                            <input type="color" name="Items[@i].Color" value="@Model.Items[i].Color" id="color_@i" class="form-control form-control-color" style="width: 80px; height: 40px;" />
                                            <input type="text" class="form-control" id="colorText_@i" value="@Model.Items[i].Color" placeholder="#3b82f6" pattern="^#[0-9A-Fa-f]{6}$" />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <input type="hidden" name="Items[@i].Id" value="@Model.Items[i].Id" />
                                        <button type="button" class="btn btn-sm btn-danger remove-item">
                                            <i class="fas fa-trash me-1"></i>Xóa
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="mt-3">
                    <button type="button" class="btn btn-success" id="addTimelineItem">
                        <i class="fas fa-plus me-2"></i>Thêm Timeline Item
                    </button>
                </div>

                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Dashboard")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Timeline
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let itemIndex = @(Model.Items?.Count ?? 0);

        // Add new timeline item
        $('#addTimelineItem').on('click', function() {
            const newItemHtml = `
                <div class="timeline-item-row mb-3 p-3 border rounded" data-index="${itemIndex}">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Order</label>
                            <input type="number" name="Items[${itemIndex}].Order" value="${itemIndex}" class="form-control" min="0" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Title <span class="text-danger">*</span></label>
                            <input type="text" name="Items[${itemIndex}].Title" class="form-control" required />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Date</label>
                            <input type="datetime-local" name="Items[${itemIndex}].Date" class="form-control" />
                        </div>
                        <div class="col-md-2">
                            <label class="form-label fw-semibold">Active</label>
                            <div class="form-check form-switch mt-2">
                                <input type="checkbox" name="Items[${itemIndex}].IsActive" value="true" class="form-check-input" checked />
                                <input type="hidden" name="Items[${itemIndex}].IsActive" value="false" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="Items[${itemIndex}].Description" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Icon (Font Awesome)</label>
                            <input type="text" name="Items[${itemIndex}].Icon" value="fas fa-circle" class="form-control" placeholder="fas fa-circle" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Color</label>
                            <div class="input-group">
                                <input type="color" name="Items[${itemIndex}].Color" value="#3b82f6" id="color_${itemIndex}" class="form-control form-control-color" style="width: 80px; height: 40px;" />
                                <input type="text" class="form-control" id="colorText_${itemIndex}" value="#3b82f6" placeholder="#3b82f6" pattern="^#[0-9A-Fa-f]{6}$" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <input type="hidden" name="Items[${itemIndex}].Id" value="0" />
                            <button type="button" class="btn btn-sm btn-danger remove-item">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </button>
                        </div>
                    </div>
                </div>
            `;
            $('#timelineItemsContainer').append(newItemHtml);
            itemIndex++;
            
            // Sync color picker and text input for new item
            syncColorPickers();
            
            // Initialize color sync for the new item
            const newRow = $('#timelineItemsContainer .timeline-item-row').last();
            const newIndex = itemIndex - 1;
            newRow.find(`#color_${newIndex}`).on('input change', function() {
                $(`#colorText_${newIndex}`).val($(this).val());
            });
            newRow.find(`#colorText_${newIndex}`).on('input blur', function() {
                const value = $(this).val();
                if (value && value.match(/^#[0-9A-Fa-f]{6}$/)) {
                    $(`#color_${newIndex}`).val(value);
                    $(`input[name*="Items[${newIndex}].Color"]`).val(value);
                    $(this).removeClass('is-invalid');
                }
            });
        });

        // Remove timeline item
        $(document).on('click', '.remove-item', function() {
            $(this).closest('.timeline-item-row').remove();
            reindexItems();
        });

        // Sync color picker and text input
        function syncColorPickers() {
            // Sync from color picker to text input
            $('.form-control-color').on('input change', function() {
                const id = $(this).attr('id');
                if (id) {
                    const index = id.replace('color_', '');
                    $(`#colorText_${index}`).val($(this).val());
                }
            });

            // Sync from text input to color picker
            $('input[id^="colorText_"]').on('input blur', function() {
                const id = $(this).attr('id');
                if (id) {
                    const index = id.replace('colorText_', '');
                    const value = $(this).val();
                    if (value && value.match(/^#[0-9A-Fa-f]{6}$/)) {
                        $(`#color_${index}`).val(value);
                        // Update the actual color input
                        $(`input[name*="Items[${index}].Color"]`).val(value);
                        $(this).removeClass('is-invalid');
                    } else if (value && value !== '') {
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                }
            });
        }

        // Reindex items after removal
        function reindexItems() {
            $('#timelineItemsContainer .timeline-item-row').each(function(index) {
                $(this).find('input, textarea, select').each(function() {
                    const name = $(this).attr('name');
                    const id = $(this).attr('id');
                    if (name) {
                        $(this).attr('name', name.replace(/Items\[\d+\]/, `Items[${index}]`));
                    }
                    if (id && id.includes('_')) {
                        const parts = id.split('_');
                        if (parts.length === 2) {
                            $(this).attr('id', `${parts[0]}_${index}`);
                        }
                    }
                });
                $(this).attr('data-index', index);
            });
            // Re-sync color pickers after reindexing
            syncColorPickers();
        }

        // Initialize color picker sync
        syncColorPickers();

        // Auto-hide alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
