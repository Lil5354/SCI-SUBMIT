@model SciSubmit.Models.Admin.PagedList<SciSubmit.Models.Admin.UserViewModel>
@{
    ViewData["Title"] = "Manage Users";
    var filter = ViewBag.Filter as SciSubmit.Models.Admin.UserFilterViewModel ?? new SciSubmit.Models.Admin.UserFilterViewModel();
    var roleOptions = ViewBag.RoleOptions as string[] ?? Array.Empty<string>();
}

<div class="container-fluid my-4">
    <!-- TempData Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header -->
    <div class="mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="text-gradient mb-2">
                    <i class="fas fa-users me-2"></i>Manage Users
                </h2>
                <p class="text-muted mb-0">Manage all users in the system</p>
            </div>
            <div>
                <a href="@Url.Action("CreateUser")" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Create User
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("Users")">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="SearchTerm" class="form-control" placeholder="Name, email..." value="@filter.SearchTerm">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Role</label>
                        <select class="form-select" name="Role">
                            <option value="">All</option>
                            @foreach (var role in roleOptions)
                            {
                                <option value="@role" selected="@(filter.Role == role)">@role</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="IsActive">
                            <option value="">All</option>
                            <option value="true" selected="@(filter.IsActive == true)">Active</option>
                            <option value="false" selected="@(filter.IsActive == false)">Inactive</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-2"></i>Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Affiliation</th>
                                <th class="text-center">Role</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Submissions</th>
                                <th class="text-center">Reviews</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = (Model.Page - 1) * Model.PageSize + 1;
                            }
                            @foreach (var user in Model.Items)
                            {
                                <tr>
                                    <td>@stt</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>@(user.Affiliation ?? "-")</td>
                                    <td class="text-center">
                                        @{
                                            var roleBadgeClass = user.Role switch
                                            {
                                                "Admin" => "bg-danger",
                                                "Reviewer" => "bg-info",
                                                "Author" => "bg-primary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @roleBadgeClass">@user.Role</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                            @(user.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-center">@user.SubmissionCount</td>
                                    <td class="text-center">@user.ReviewAssignmentCount</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-1">
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="editUser(@user.Id)" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            @if (user.Role != "Admin")
                                            {
                                                <select class="form-select form-select-sm" style="width: auto;" onchange="updateRole(@user.Id, this.value)">
                                                    <option value="@user.Role" selected>@user.Role</option>
                                                    @foreach (var role in roleOptions.Where(r => r != user.Role))
                                                    {
                                                        <option value="@role">@role</option>
                                                    }
                                                </select>
                                            }
                                            @if (user.IsActive)
                                            {
                                                <form method="post" action="@Url.Action("DeactivateUser", new { userId = user.Id })" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to deactivate this user?');" title="Vô hiệu hóa">
                                                        <i class="fas fa-ban"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form method="post" action="@Url.Action("ActivateUser", new { userId = user.Id })" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-success" onclick="return confirm('Are you sure you want to activate this user?');" title="Kích hoạt">
                                                        <i class="fas fa-check-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                                stt++;
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Users", new { Page = Model.Page - 1, filter.Role, filter.SearchTerm, filter.IsActive })">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Users", new { Page = i, filter.Role, filter.SearchTerm, filter.IsActive })">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link" href="@Url.Action("Users", new { Page = Model.Page + 1, filter.Role, filter.SearchTerm, filter.IsActive })">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No users found</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editUserModalLabel">
                    <i class="fas fa-user-edit me-2"></i>Chỉnh sửa người dùng
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editUserForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" id="editUserId" name="Id" />
                    <div id="editUserError" class="alert alert-danger" style="display: none;"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="editFullName" class="form-label fw-semibold">Họ tên <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editFullName" name="FullName" required maxlength="255">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="editEmail" class="form-label fw-semibold">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="editEmail" name="Email" required maxlength="255">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="editPhoneNumber" class="form-label fw-semibold">Số điện thoại</label>
                            <input type="text" class="form-control" id="editPhoneNumber" name="PhoneNumber" maxlength="20">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="editAffiliation" class="form-label fw-semibold">Đơn vị</label>
                            <input type="text" class="form-control" id="editAffiliation" name="Affiliation" maxlength="500">
                        </div>
                        
                        <div class="col-md-6">
                            <label for="editRole" class="form-label fw-semibold">Vai trò <span class="text-danger">*</span></label>
                            <select class="form-select" id="editRole" name="Role" required>
                                @foreach (var role in roleOptions)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Trạng thái</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="editIsActive" name="IsActive" checked>
                                <label class="form-check-label" for="editIsActive">Kích hoạt</label>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Xác nhận email</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" id="editEmailConfirmed" name="EmailConfirmed" checked>
                                <label class="form-check-label" for="editEmailConfirmed">Đã xác nhận</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" id="editUserSubmitBtn">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editUser(userId) {
            // Load user data
            $.ajax({
                url: '@Url.Action("GetUser", "Admin")',
                type: 'GET',
                data: { id: userId },
                success: function(response) {
                    if (response.success) {
                        var user = response.user;
                        $('#editUserId').val(user.id);
                        $('#editFullName').val(user.fullName);
                        $('#editEmail').val(user.email);
                        $('#editPhoneNumber').val(user.phoneNumber || '');
                        $('#editAffiliation').val(user.affiliation || '');
                        $('#editRole').val(user.role);
                        $('#editIsActive').prop('checked', user.isActive);
                        $('#editEmailConfirmed').prop('checked', user.emailConfirmed);
                        
                        // Show modal
                        var modal = new bootstrap.Modal(document.getElementById('editUserModal'));
                        modal.show();
                    } else {
                        alert('Không thể tải thông tin người dùng.');
                    }
                },
                error: function() {
                    alert('Lỗi khi tải thông tin người dùng.');
                }
            });
        }

        function updateRole(userId, newRole) {
            if (confirm('Are you sure you want to change this user\'s role?')) {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = '@Url.Action("UpdateUserRole")';
                
                var token = document.createElement('input');
                token.type = 'hidden';
                token.name = '__RequestVerificationToken';
                token.value = '@Html.AntiForgeryToken()'.match(/value="([^"]+)"/)[1];
                form.appendChild(token);
                
                var userIdInput = document.createElement('input');
                userIdInput.type = 'hidden';
                userIdInput.name = 'userId';
                userIdInput.value = userId;
                form.appendChild(userIdInput);
                
                var roleInput = document.createElement('input');
                roleInput.type = 'hidden';
                roleInput.name = 'newRole';
                roleInput.value = newRole;
                form.appendChild(roleInput);
                
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Handle edit user form submit
        $('#editUserForm').on('submit', function(e) {
            e.preventDefault();
            
            // Hide previous errors
            $('#editUserError').hide();
            
            // Get form data
            var formData = {
                Id: $('#editUserId').val(),
                FullName: $('#editFullName').val(),
                Email: $('#editEmail').val(),
                PhoneNumber: $('#editPhoneNumber').val() || null,
                Affiliation: $('#editAffiliation').val() || null,
                Role: $('#editRole').val(),
                IsActive: $('#editIsActive').is(':checked'),
                EmailConfirmed: $('#editEmailConfirmed').is(':checked'),
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            };
            
            // Validate required fields
            if (!formData.FullName || !formData.Email || !formData.Role) {
                $('#editUserError').text('Vui lòng điền đầy đủ các trường bắt buộc.').show();
                return;
            }
            
            // Disable submit button
            var submitBtn = $('#editUserSubmitBtn');
            submitBtn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Đang lưu...');
            
            // Submit via AJAX
            $.ajax({
                url: '@Url.Action("UpdateUser", "Admin")',
                type: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                },
                data: formData,
                success: function(response) {
                    // Close modal
                    var modal = bootstrap.Modal.getInstance(document.getElementById('editUserModal'));
                    modal.hide();
                    
                    // Reload page to show updated data
                    location.reload();
                },
                error: function(xhr) {
                    var errorMsg = 'Không thể cập nhật thông tin người dùng.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMsg = xhr.responseJSON.message;
                    } else if (xhr.responseText) {
                        // Try to extract error from response
                        var match = xhr.responseText.match(/ErrorMessage["\s]*:["\s]*([^"<]+)/i);
                        if (match) {
                            errorMsg = match[1];
                        }
                    }
                    $('#editUserError').text(errorMsg).show();
                    submitBtn.prop('disabled', false).html('<i class="fas fa-save me-2"></i>Lưu thay đổi');
                }
            });
        });

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
