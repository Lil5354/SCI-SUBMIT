@{
    ViewData["Title"] = "Xem trước file";
    var fileName = ViewBag.FileName as string ?? "";
    var fileUrl = ViewBag.FileUrl as string ?? "";
    var fileType = ViewBag.FileType as string ?? "";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i>Xem trước: @fileName
                    </h5>
                    <a href="@fileUrl" download="@fileName" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-download me-2"></i>Tải xuống
                    </a>
                </div>
                <div class="card-body p-0" style="height: 80vh;">
                    @if (fileType == ".pdf")
                    {
                        <iframe src="@fileUrl" style="width: 100%; height: 100%; border: none;"></iframe>
                    }
                    else if (fileType == ".doc" || fileType == ".docx")
                    {
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <div class="text-center">
                                <i class="fas fa-file-word fa-5x text-primary mb-3"></i>
                                <h5>Không thể xem trước file Word trong trình duyệt</h5>
                                <p class="text-muted">Vui lòng tải xuống để xem nội dung</p>
                                <a href="@fileUrl" download="@fileName" class="btn btn-primary">
                                    <i class="fas fa-download me-2"></i>Tải xuống
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <div class="text-center">
                                <i class="fas fa-file fa-5x text-muted mb-3"></i>
                                <h5>Không thể xem trước loại file này</h5>
                                <a href="@fileUrl" download="@fileName" class="btn btn-primary">
                                    <i class="fas fa-download me-2"></i>Tải xuống
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-resize iframe for PDF
        @if (fileType == ".pdf")
        {
            <text>
            window.addEventListener('load', function() {
                var iframe = document.querySelector('iframe');
                if (iframe) {
                    iframe.onload = function() {
                        try {
                            iframe.style.height = iframe.contentWindow.document.body.scrollHeight + 'px';
                        } catch (e) {
                            // Cross-origin restriction
                        }
                    };
                }
            });
            </text>
        }
    </script>
}













