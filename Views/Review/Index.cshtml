@{
    ViewData["Title"] = "Phản biện";
}

<div class="container my-5">
    <!-- Header -->
    <div class="mb-4">
        <h2 class="text-gradient mb-2">Phản biện</h2>
        <p class="text-muted">Danh sách các bài báo được phân công phản biện</p>
    </div>

    <!-- Review Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-clipboard-list fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0">5</h4>
                    <small class="text-muted">Tổng số bài phân công</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-hourglass-half fa-2x text-warning mb-2"></i>
                    <h4 class="mb-0">3</h4>
                    <small class="text-muted">Đang chờ phản biện</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="mb-0">2</h4>
                    <small class="text-muted">Đã hoàn thành</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-exclamation-triangle fa-2x text-danger mb-2"></i>
                    <h4 class="mb-0">1</h4>
                    <small class="text-muted">Sắp hết hạn</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Review List -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh sách bài phản biện</h5>
                <select class="form-select form-select-sm" style="width: auto;">
                    <option>Tất cả trạng thái</option>
                    <option>Chờ phản biện</option>
                    <option>Đang phản biện</option>
                    <option>Đã hoàn thành</option>
                </select>
            </div>
        </div>
        <div class="card-body">
            <!-- Review Item 1 -->
            <div class="card mb-3 border-left-primary">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-2">Nghiên cứu về ứng dụng AI trong quản lý tài chính</h5>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>Tác giả: Nguyễn Văn A, Trần Thị B
                                </small>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-info me-2">Tài chính & Kế toán</span>
                                <span class="badge bg-secondary">Ngôn ngữ: Tiếng Việt</span>
                            </div>
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>Hạn phản biện: 25/01/2025
                                </small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-2">
                                <span class="badge bg-warning fs-6">Chờ phản biện</span>
                            </div>
                            <small class="text-muted d-block">Ngày nhận: 15/01/2025</small>
                        </div>
                        <div class="col-md-3 text-end">
                            <button class="btn btn-primary btn-sm mb-2 w-100">
                                <i class="fas fa-eye me-1"></i>Xem bài báo
                            </button>
                            <button class="btn btn-success btn-sm w-100">
                                <i class="fas fa-pencil-alt me-1"></i>Bắt đầu phản biện
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Review Item 2 -->
            <div class="card mb-3 border-left-warning">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-2">Chiến lược marketing số cho doanh nghiệp SME</h5>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>Tác giả: Hoàng Thị F
                                </small>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-info me-2">Marketing</span>
                                <span class="badge bg-secondary">Ngôn ngữ: Tiếng Việt</span>
                            </div>
                            <div>
                                <small class="text-danger">
                                    <i class="fas fa-exclamation-circle me-1"></i>Hạn phản biện: 20/01/2025 (Còn 2 ngày)
                                </small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-2">
                                <span class="badge bg-danger fs-6">Sắp hết hạn</span>
                            </div>
                            <small class="text-muted d-block">Ngày nhận: 05/01/2025</small>
                        </div>
                        <div class="col-md-3 text-end">
                            <button class="btn btn-primary btn-sm mb-2 w-100">
                                <i class="fas fa-eye me-1"></i>Xem bài báo
                            </button>
                            <button class="btn btn-warning btn-sm w-100">
                                <i class="fas fa-edit me-1"></i>Tiếp tục phản biện
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Review Item 3 -->
            <div class="card mb-3 border-left-success">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-2">Phân tích xu hướng thương mại điện tử tại Việt Nam</h5>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>Tác giả: Nguyễn Văn C
                                </small>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-info me-2">Thương mại</span>
                                <span class="badge bg-secondary">Ngôn ngữ: Tiếng Việt</span>
                            </div>
                            <div>
                                <small class="text-success">
                                    <i class="fas fa-check-circle me-1"></i>Đã hoàn thành: 12/01/2025
                                </small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-2">
                                <span class="badge bg-success fs-6">Đã hoàn thành</span>
                            </div>
                            <div class="mb-2">
                                <div class="rating">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                </div>
                                <small class="text-muted">Đánh giá: 5/5</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-end">
                            <button class="btn btn-outline-primary btn-sm mb-2 w-100">
                                <i class="fas fa-eye me-1"></i>Xem lại
                            </button>
                            <button class="btn btn-outline-success btn-sm w-100" disabled>
                                <i class="fas fa-check me-1"></i>Đã phản biện
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Review Item 4 -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="mb-2">Đánh giá tác động của chuyển đổi số lên doanh nghiệp vừa và nhỏ</h5>
                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>Tác giả: Lê Văn D, Phạm Thị E
                                </small>
                            </div>
                            <div class="mb-2">
                                <span class="badge bg-info me-2">Quản trị kinh doanh</span>
                                <span class="badge bg-secondary">Ngôn ngữ: English</span>
                            </div>
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>Hạn phản biện: 30/01/2025
                                </small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-2">
                                <span class="badge bg-warning fs-6">Chờ phản biện</span>
                            </div>
                            <small class="text-muted d-block">Ngày nhận: 18/01/2025</small>
                        </div>
                        <div class="col-md-3 text-end">
                            <button class="btn btn-primary btn-sm mb-2 w-100">
                                <i class="fas fa-eye me-1"></i>Xem bài báo
                            </button>
                            <button class="btn btn-success btn-sm w-100">
                                <i class="fas fa-pencil-alt me-1"></i>Bắt đầu phản biện
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Review Form Modal Preview -->
    <div class="card mt-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Hướng dẫn phản biện</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6><i class="fas fa-check-circle text-success me-2"></i>Tiêu chí đánh giá:</h6>
                    <ul class="list-unstyled ms-4">
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Chất lượng nghiên cứu</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Tính mới và đóng góp</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Phương pháp nghiên cứu</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Kết quả và thảo luận</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Văn phong và trình bày</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h6><i class="fas fa-clock text-warning me-2"></i>Lưu ý:</h6>
                    <ul class="list-unstyled ms-4">
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Phản biện công bằng và khách quan</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Đưa ra nhận xét cụ thể và xây dựng</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Hoàn thành đúng thời hạn</li>
                        <li><i class="fas fa-arrow-right text-primary me-2"></i>Bảo mật thông tin bài báo</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .border-left-primary {
            border-left: 4px solid var(--color-primary);
        }

        .border-left-warning {
            border-left: 4px solid var(--color-warning);
        }

        .border-left-success {
            border-left: 4px solid var(--color-success);
        }

        .rating i {
            font-size: 0.9rem;
        }
    </style>
}

