@{
    ViewData["Title"] = "Import Dữ liệu Mẫu";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-database me-2"></i>Import Dữ liệu Mẫu</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Lưu ý:</strong> Thao tác này sẽ import dữ liệu mẫu vào database để test các chức năng admin.
                        <br>
                        Nếu database đã có dữ liệu, hệ thống sẽ bỏ qua.
                    </div>

                    <h5 class="mb-3">Dữ liệu sẽ được import:</h5>
                    <ul class="list-group mb-4">
                        <li class="list-group-item">
                            <i class="fas fa-users text-primary me-2"></i>
                            <strong>Users:</strong> Admin, 2 Reviewers, 2 Authors
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-building text-primary me-2"></i>
                            <strong>Conference:</strong> Hội thảo Khoa học Quốc tế 2025
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-calendar text-primary me-2"></i>
                            <strong>Conference Plan:</strong> Timeline với các deadlines
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-list text-primary me-2"></i>
                            <strong>Topics:</strong> 5 chủ đề (Kinh tế, Tài chính, Thương mại, Quản trị, Marketing)
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-tags text-primary me-2"></i>
                            <strong>Keywords:</strong> AI, Machine Learning, Tài chính, E-commerce, etc.
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-file-alt text-primary me-2"></i>
                            <strong>Submissions:</strong> 3 bài nộp với các trạng thái khác nhau
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-user-tie text-primary me-2"></i>
                            <strong>Review Assignments:</strong> Phân công phản biện
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-star text-primary me-2"></i>
                            <strong>Reviews:</strong> 1 review đã hoàn thành
                        </li>
                    </ul>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Thông tin đăng nhập mẫu:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>Admin:</strong> admin@scisubmit.com / Admin@123</li>
                            <li><strong>Reviewer 1:</strong> reviewer1@scisubmit.com / Reviewer@123</li>
                            <li><strong>Reviewer 2:</strong> reviewer2@scisubmit.com / Reviewer@123</li>
                            <li><strong>Author 1:</strong> author1@scisubmit.com / Author@123</li>
                            <li><strong>Author 2:</strong> author2@scisubmit.com / Author@123</li>
                        </ul>
                    </div>

                    <form method="post" action="@Url.Action("SeedData")">
                        @Html.AntiForgeryToken()
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" onclick="return confirm('Bạn có chắc chắn muốn import dữ liệu mẫu?');">
                                <i class="fas fa-download me-2"></i>Import Dữ liệu Mẫu
                            </button>
                            <a href="@Url.Action("SeedReviewTestData", "Seed")" class="btn btn-success btn-lg" onclick="return confirm('Bạn có chắc chắn muốn tạo data test cho review flow?');">
                                <i class="fas fa-clipboard-check me-2"></i>Tạo Data Test Review Flow
                            </a>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



