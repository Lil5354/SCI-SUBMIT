@{
    ViewData["Title"] = "Bài đã nộp";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-gradient mb-2">Bài đã nộp</h2>
            <p class="text-muted mb-0">Quản lý và theo dõi các bài báo đã nộp</p>
        </div>
        <a href="/Submission/Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Nộp bài mới
        </a>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="Tìm theo tiêu đề, tác giả...">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select class="form-select">
                        <option value="">Tất cả trạng thái</option>
                        <option>Đang chờ xét duyệt</option>
                        <option>Đang xét duyệt</option>
                        <option>Yêu cầu chỉnh sửa</option>
                        <option>Đã chấp nhận</option>
                        <option>Đã từ chối</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Lĩnh vực</label>
                    <select class="form-select">
                        <option value="">Tất cả lĩnh vực</option>
                        <option>Kinh tế</option>
                        <option>Tài chính & Kế toán</option>
                        <option>Thương mại</option>
                        <option>Quản trị kinh doanh</option>
                        <option>Marketing</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i>Lọc
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Papers List -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="table-layout: fixed; width: 100%;">
                    <colgroup>
                        <col style="width: 5%; min-width: 50px; max-width: 60px;">
                        <col style="width: 40%;">
                        <col style="width: 15%;">
                        <col style="width: 15%;">
                        <col style="width: 12%;">
                        <col style="width: 13%;">
                    </colgroup>
                    <thead>
                        <tr>
                            <th style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box;">STT</th>
                            <th style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Tiêu đề</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Lĩnh vực</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Trạng thái</th>
                            <th style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Ngày nộp</th>
                            <th style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box; overflow: hidden;">1</td>
                            <td style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                    <strong class="d-block mb-1" style="word-wrap: break-word; overflow-wrap: break-word;">Nghiên cứu về ứng dụng AI trong quản lý tài chính</strong>
                                    <small class="text-muted d-block" style="word-wrap: break-word; overflow-wrap: break-word;">Tác giả: Nguyễn Văn A, Trần Thị B</small>
                                </div>
                            </td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">Tài chính & Kế toán</td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-warning">Đang xét duyệt</span>
                            </td>
                            <td style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">15/01/2025</td>
                            <td style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <div class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info" title="Tải xuống">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box; overflow: hidden;">2</td>
                            <td style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                    <strong class="d-block mb-1" style="word-wrap: break-word; overflow-wrap: break-word;">Phân tích xu hướng thương mại điện tử tại Việt Nam</strong>
                                    <small class="text-muted d-block" style="word-wrap: break-word; overflow-wrap: break-word;">Tác giả: Nguyễn Văn C</small>
                                </div>
                            </td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">Thương mại</td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-success">Đã chấp nhận</span>
                            </td>
                            <td style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">10/01/2025</td>
                            <td style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <div class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info" title="Tải xuống">
                                        <i class="fas fa-download"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" title="Đã chấp nhận" disabled>
                                        <i class="fas fa-check"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box; overflow: hidden;">3</td>
                            <td style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                    <strong class="d-block mb-1" style="word-wrap: break-word; overflow-wrap: break-word;">Đánh giá tác động của chuyển đổi số lên doanh nghiệp vừa và nhỏ</strong>
                                    <small class="text-muted d-block" style="word-wrap: break-word; overflow-wrap: break-word;">Tác giả: Lê Văn D, Phạm Thị E</small>
                                </div>
                            </td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">Quản trị kinh doanh</td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-primary">Yêu cầu chỉnh sửa</span>
                            </td>
                            <td style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">05/01/2025</td>
                            <td style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <div class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info" title="Xem phản hồi">
                                        <i class="fas fa-comments"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box; overflow: hidden;">4</td>
                            <td style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                    <strong class="d-block mb-1" style="word-wrap: break-word; overflow-wrap: break-word;">Chiến lược marketing số cho doanh nghiệp SME</strong>
                                    <small class="text-muted d-block" style="word-wrap: break-word; overflow-wrap: break-word;">Tác giả: Hoàng Thị F</small>
                                </div>
                            </td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">Marketing</td>
                            <td style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <span class="badge bg-danger">Đã từ chối</span>
                            </td>
                            <td style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">28/12/2024</td>
                            <td style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                <div class="d-flex justify-content-center gap-1">
                                    <button class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-info" title="Xem lý do từ chối">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Trước</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Sau</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0">4</h4>
                    <small class="text-muted">Tổng số bài</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h4 class="mb-0">1</h4>
                    <small class="text-muted">Đang xét duyệt</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="mb-0">1</h4>
                    <small class="text-muted">Đã chấp nhận</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-edit fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0">1</h4>
                    <small class="text-muted">Cần chỉnh sửa</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table tbody tr {
            cursor: pointer;
        }
    </style>
}
