@model List<SciSubmit.Models.Submission.Submission>
@{
    ViewData["Title"] = "My Submissions";
    ViewData["HideMainHeader"] = true;
}
@await Html.PartialAsync("_AuthorNavHeader")

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-gradient mb-2">My Submissions</h2>
            <p class="text-muted mb-0">Manage and track your submitted papers</p>
        </div>
        <a href="/Submission/Create" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>New Submission
        </a>
    </div>

    <!-- Filters and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("Index", "Submission")">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Search</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" name="search" class="form-control" placeholder="Search by title, author..." value="@ViewBag.Search">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">Tất cả trạng thái</option>
                            @{
                                var currentStatus = ViewBag.Status as string;
                            }
                            <option value="Draft" selected="@(currentStatus == "Draft")">Nháp</option>
                            <option value="PendingAbstractReview" selected="@(currentStatus == "PendingAbstractReview")">Đang chờ xét duyệt</option>
                            <option value="UnderReview" selected="@(currentStatus == "UnderReview")">Đang xét duyệt</option>
                            <option value="RevisionRequired" selected="@(currentStatus == "RevisionRequired")">Yêu cầu chỉnh sửa</option>
                            <option value="Accepted" selected="@(currentStatus == "Accepted")">Đã chấp nhận</option>
                            <option value="Rejected" selected="@(currentStatus == "Rejected")">Đã từ chối</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Lĩnh vực</label>
                        <select name="topicId" class="form-select">
                            <option value="">Tất cả lĩnh vực</option>
                            @if (ViewBag.Topics != null)
                            {
                                var selectedTopicId = ViewBag.TopicId as int?;
                                foreach (var topic in ViewBag.Topics as List<SciSubmit.Models.Content.Topic>)
                                {
                                    var isSelected = selectedTopicId.HasValue && selectedTopicId.Value == topic.Id;
                                    <option value="@topic.Id" selected="@isSelected">@topic.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-filter me-1"></i>Filter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Papers List -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="table-layout: fixed; width: 100%;">
                    <colgroup>
                        <col style="width: 5%; min-width: 50px; max-width: 60px;">
                        <col style="width: 40%;">
                        <col style="width: 15%;">
                        <col style="width: 15%;">
                        <col style="width: 12%;">
                        <col style="width: 13%;">
                    </colgroup>
                    <thead>
                        <tr>
                            <th style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box;">#</th>
                            <th style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Title</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box;">Topic</th>
                            <th style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Status</th>
                            <th style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Submitted Date</th>
                            <th style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            var index = 0;
                            @foreach (var submission in Model)
                            {
                                index++;
                                var authors = submission.SubmissionAuthors.OrderBy(a => a.OrderIndex).ToList();
                                var topic = submission.SubmissionTopics.FirstOrDefault()?.Topic;
                                var submissionDate = submission.AbstractSubmittedAt ?? submission.CreatedAt;
                                
                                <tr>
                                    <td style="width: 5%; min-width: 50px; max-width: 60px; padding: 12px; text-align: center; vertical-align: middle; display: table-cell !important; box-sizing: border-box; overflow: hidden;">@index</td>
                                    <td style="width: 40%; min-width: 200px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                        <div style="max-width: 100%; overflow: hidden; word-wrap: break-word;">
                                            <strong class="d-block mb-1" style="word-wrap: break-word; overflow-wrap: break-word;">@submission.Title</strong>
                                            <small class="text-muted d-block" style="word-wrap: break-word; overflow-wrap: break-word;">
                                                Author: @string.Join(", ", authors.Select(a => a.FullName))
                                            </small>
                                        </div>
                                    </td>
                                    <td style="width: 15%; min-width: 120px; padding: 12px; vertical-align: middle; box-sizing: border-box; overflow: hidden; word-wrap: break-word;">
                                        @(topic?.Name ?? "N/A")
                                    </td>
                                    <td style="width: 15%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                        @{
                                            var statusClass = submission.Status switch
                                            {
                                                SciSubmit.Models.Enums.SubmissionStatus.PendingAbstractReview => "bg-warning",
                                                SciSubmit.Models.Enums.SubmissionStatus.UnderReview => "bg-info",
                                                SciSubmit.Models.Enums.SubmissionStatus.RevisionRequired => "bg-primary",
                                                SciSubmit.Models.Enums.SubmissionStatus.Accepted => "bg-success",
                                                SciSubmit.Models.Enums.SubmissionStatus.Rejected => "bg-danger",
                                                SciSubmit.Models.Enums.SubmissionStatus.AbstractRejected => "bg-danger",
                                                SciSubmit.Models.Enums.SubmissionStatus.Draft => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                            var statusText = submission.Status switch
                                            {
                                                SciSubmit.Models.Enums.SubmissionStatus.PendingAbstractReview => "Pending Review",
                                                SciSubmit.Models.Enums.SubmissionStatus.UnderReview => "Under Review",
                                                SciSubmit.Models.Enums.SubmissionStatus.RevisionRequired => "Revision Required",
                                                SciSubmit.Models.Enums.SubmissionStatus.Accepted => "Accepted",
                                                SciSubmit.Models.Enums.SubmissionStatus.Rejected => "Rejected",
                                                SciSubmit.Models.Enums.SubmissionStatus.AbstractRejected => "Rejected",
                                                SciSubmit.Models.Enums.SubmissionStatus.Draft => "Draft",
                                                _ => submission.Status.ToString()
                                            };
                                        }
                                        <span class="badge @statusClass">@statusText</span>
                                    </td>
                                    <td style="width: 12%; min-width: 100px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden; white-space: nowrap;">
                                        @submissionDate.ToString("dd/MM/yyyy")
                                    </td>
                                    <td style="width: 13%; min-width: 120px; padding: 12px; text-align: center; vertical-align: middle; box-sizing: border-box; overflow: hidden;">
                                        <div class="d-flex justify-content-center gap-1">
                                            <a href="@Url.Action("Details", "Submission", new { id = submission.Id })" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!string.IsNullOrEmpty(submission.AbstractFileUrl))
                                            {
                                                <a href="@submission.AbstractFileUrl" class="btn btn-sm btn-outline-info" title="Tải xuống" target="_blank">
                                                    <i class="fas fa-download"></i>
                                                </a>
                                            }
                                            @if (submission.Status == SciSubmit.Models.Enums.SubmissionStatus.Draft || 
                                                 submission.Status == SciSubmit.Models.Enums.SubmissionStatus.RevisionRequired)
                                            {
                                                <a href="@Url.Action("Create", "Submission", new { id = submission.Id })" class="btn btn-sm btn-outline-warning" title="Chỉnh sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No submissions yet. <a href="@Url.Action("Create", "Submission")">Create new submission</a></p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @* Pagination can be added later if needed *@
        </div>
    </div>

    <!-- Statistics Summary -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-file-alt fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0">@(ViewBag.TotalSubmissions ?? 0)</h4>
                    <small class="text-muted">Total Submissions</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h4 class="mb-0">@(ViewBag.PendingReview ?? 0)</h4>
                    <small class="text-muted">Under Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="mb-0">@(ViewBag.Accepted ?? 0)</h4>
                    <small class="text-muted">Accepted</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="fas fa-edit fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0">@(ViewBag.RevisionRequested ?? 0)</h4>
                    <small class="text-muted">Revision Required</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table tbody tr {
            cursor: pointer;
        }
    </style>
}
